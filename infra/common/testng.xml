<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="unit" parallel="false">
	<listeners>
		<listener class-name="com.evolveum.midpoint.tools.testng.TestMethodLoggerListener"/>
	</listeners>
	<test name="Password validator" preserve-order="false">
		<classes>
			<class name="com.evolveum.midpoint.common.test.PasswordPolicyValidatorTest" />
		</classes>
	</test>
	<test name="Basic Validator" preserve-order="false">
		<classes>
			<class name="com.evolveum.midpoint.validator.test.BasicValidatorTest" />
		</classes>
	</test>
	<test name="Utils" preserve-order="false">
		<classes>
			<class name="com.evolveum.midpoint.common.test.UtilsTest" />
			<class name="com.evolveum.midpoint.common.TestActivationComputer" />
		</classes>
	</test>
	<test name="ExpressionConstruction" preserve-order="false">
		<classes>
			<class name="com.evolveum.midpoint.common.expression.TestXPathExpressions" />
			<class name="com.evolveum.midpoint.common.expression.TestJavaScriptExpressions" />
			<class name="com.evolveum.midpoint.common.expression.TestGroovyExpressions" />
			<class name="com.evolveum.midpoint.common.expression.TestMidPointFunctions" />
			<class name="com.evolveum.midpoint.common.expression.TestStaticValues" />
			<class name="com.evolveum.midpoint.common.expression.TestExpressionUtil" />
			<class name="com.evolveum.midpoint.common.mapping.TestMappingDynamic" />
			<class name="com.evolveum.midpoint.common.mapping.TestMappingStatic" />
		</classes>
	</test>
		<test name="Schema" preserve-order="false">
		<classes>
			<class name="com.evolveum.midpoint.common.refinery.TestRefinedSchema" />
		</classes>
	</test>
	
</suite>
