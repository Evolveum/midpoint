	</xsd:element>

	<xsd:element name="workItemAction" type="c:AbstractWorkItemActionType">
		<xsd:annotation>
			<xsd:appinfo>
				<a:minOccurs>0</a:minOccurs>
				<a:maxOccurs>1</a:maxOccurs>
				<a:since>3.6</a:since>
			</xsd:appinfo>
		</xsd:annotation>
	</xsd:element>

	<xsd:element name="workItemId" type="xsd:string">
		<xsd:annotation>
			<xsd:appinfo>
				<a:minOccurs>0</a:minOccurs>
				<a:maxOccurs>1</a:maxOccurs>
				<a:since>3.6</a:since>
			</xsd:appinfo>
		</xsd:annotation>
	</xsd:element>

	<xsd:element name="timeBeforeAction" type="xsd:duration">
		<xsd:annotation>
			<xsd:appinfo>
				<a:minOccurs>0</a:minOccurs>
				<a:maxOccurs>1</a:maxOccurs>
				<a:since>3.6</a:since>
			</xsd:appinfo>
		</xsd:annotation>
	</xsd:element>

</xsd:schema>


