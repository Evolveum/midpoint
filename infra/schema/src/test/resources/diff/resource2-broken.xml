                </cap:status>
            </cap:activation>
        </configured>
    </capabilities>

    <synchronization>
        <objectSynchronization>
            <correlation>
                <q:equal xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3">
                    <q:path>problem4:name</q:path>
                    <expression>
                        <path>problem5:uid</path>
                    </expression>
                </q:equal>
            </correlation>
        </objectSynchronization>
    </synchronization>
