<securityPolicy xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="28676177-5884-4625-805d-bae552932666">

    <name>security policy</name>

    <authentication>
        <modules>
            <saml2 id="1">
                <name>sa</name>
                <network>
                    <readTimeout>1</readTimeout>
                    <connectTimeout>2</connectTimeout>
                </network>
                <serviceProvider id="2">
                    <entityId>e</entityId>
                    <provider id="3">
                        <entityId>e</entityId>
                        <alias>asdf</alias>
                        <metadataTrustCheck>false</metadataTrustCheck>
                        <skipSslValidation>false</skipSslValidation>
                    </provider>
                    <identityProvider>
                        <entityId>e</entityId>
                        <alias>a</alias>
                        <authenticationRequestBinding>asdf</authenticationRequestBinding>
                        <nameOfUsernameAttribute>jkl</nameOfUsernameAttribute>
                    </identityProvider>
                    <wantAssertionsSigned>true</wantAssertionsSigned>
                    <nameId>urn:oasis:names:tc:SAML:1.1:nameid-format:unspecified</nameId>
                    <singleLogoutEnabled>false</singleLogoutEnabled>
                    <defaultDigest>http://www.w3.org/2001/04/xmlenc#sha256</defaultDigest>
                </serviceProvider>
            </saml2>
        </modules>
    </authentication>
</securityPolicy>
