            </objectForm>
        </objectForms>
        <objectCollectionViews>
            <objectCollectionView id="3">
                <action id="4">
                    <identifier>action1</identifier>
                </action>
                <action id="5">
                    <identifier>action2</identifier>
                </action>
                <searchBoxConfiguration>
                    <scopeConfiguration>
                        <defaultValue>oneLevel</defaultValue>
                    </scopeConfiguration>
                    <objectTypeConfiguration>
