<archetype oid="00000000-0000-0000-0000-000000000300"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
>
    <name>System user</name>
    <description>
        Archetype for system users, i.e. non-person users that are needed for system to work.
        This may be (root-like) system administrator, application users and so on.
    </description>
    <archetypePolicy>
        <display>
            <label>
                <orig>System user</orig>
                <translation>
                    <key>systemUser.label</key>
                </translation>
            </label>
            <pluralLabel>
                <orig>System users</orig>
                <translation>
                    <key>systemUser.pluralLabel</key>
                </translation>
            </pluralLabel>
            <icon>
                <cssClass>fa fa-user</cssClass>
                <color>#da0000</color>
            </icon>
        </display>
    </archetypePolicy>
    <assignment id="1">
        <identifier>holderType</identifier>
        <assignmentRelation id="2">
            <holderType>UserType</holderType>
        </assignmentRelation>
    </assignment>
</archetype>
