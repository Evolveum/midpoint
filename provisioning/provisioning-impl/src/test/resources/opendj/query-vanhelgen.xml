<q:query xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xmlns:c='http://midpoint.evolveum.com/xml/ns/public/common/common-3'
	xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance/ef2bc95b-76e0-59e2-86d6-3d4f02d3ffff">

<q:filter>
	<q:and>
		<q:ref>
			<q:path>resourceRef</q:path>
			<q:value>
				<c:oid>ef2bc95b-76e0-59e2-86d6-3d4f02d3ffff</c:oid>
			</q:value>
		</q:ref>
		<q:equal>
			<q:path>objectClass</q:path>
			<q:value>inetOrgPerson</q:value>
		</q:equal>
		<q:equal>
			<q:path>
                attributes/ri:uid</q:path>
			<q:value>vanhelgen</q:value>
		</q:equal>
	</q:and>
	</q:filter>
</q:query>
