<resource oid="ef2bc95b-76e0-59e2-86d6-999902d3abab"
          xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
          xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">

    <name>Embedded Test Derby</name>
    <connectorRef oid="will-be-supplied-by-the-test-code"/>
    <connectorConfiguration xmlns:icfi="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/bundle/com.evolveum.polygon.connector-databasetable/org.identityconnectors.databasetable.DatabaseTableConnector"
                   xmlns:icfc="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/connector-schema-3">

        <icfc:configurationProperties>
            <icfi:jdbcDriver>org.apache.derby.jdbc.ClientDriver</icfi:jdbcDriver>
            <icfi:jdbcUrlTemplate>jdbc:derby://%h:%p/%d</icfi:jdbcUrlTemplate>
            <icfi:keyColumn>login</icfi:keyColumn>
            <icfi:passwordColumn>password</icfi:passwordColumn>
            <icfi:password><clearValue>secret</clearValue></icfi:password>
            <icfi:table>users</icfi:table>
            <icfi:user>midpoint</icfi:user>
            <icfi:database>target/derbyMidPointTest</icfi:database>
            <icfi:host>localhost</icfi:host>
            <icfi:port>11527</icfi:port>
            <!--  <icfi:suppressPassword>false</icfi:suppressPassword>  -->
        </icfc:configurationProperties>

    </connectorConfiguration>
    <c:schema>
      <!-- Schema is empty. Schema should be generated by provisioning on the first use of this resource. -->
    </c:schema>
    <schemaHandling>
        <objectType>
            <intent>default</intent>
            <default>true</default>
            <objectClass>ri:AccountObjectClass</objectClass>
            <credentials>
                <password>
                    <fetchStrategy>explicit</fetchStrategy>
                </password>
            </credentials>
        </objectType>
    </schemaHandling>
</resource>
