<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="5c7cb832-95d9-48fe-b86b-0278a43b21ee">
    <name>task-child-restart-on-own-execution-time-with-subtasks</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002" type="UserType"/>
    <executionState>closed</executionState>
    <activity>
        <composition>
            <activity>
                <order>1</order>
                <identifier>first</identifier>
                <work>
                    <noOp>
                        <steps>3</steps>
                        <delay>100</delay>
                    </noOp>
                </work>
            </activity>
            <activity>
                <order>2</order>
                <identifier>second</identifier>
                <work>
                    <noOp>
                        <steps>40</steps>
                        <delay>250</delay>
                    </noOp>
                </work>
                <policies>
                    <policy>
                        <name>Execution time at most 2 seconds</name>
                        <policyConstraints>
                            <executionTime>
                                <exceeds>PT2S</exceeds>
                            </executionTime>
                            <executionAttempts>
                                <below>2</below>
                            </executionAttempts>
                        </policyConstraints>
                        <policyReaction>
                            <action>
                                <restartActivity>
                                    <delay>500</delay>
                                </restartActivity>
                            </action>
                        </policyReaction>
                    </policy>
                </policies>
                <distribution>
                    <buckets>
                        <implicitSegmentation>
                            <numberOfBuckets>4</numberOfBuckets>
                        </implicitSegmentation>
                    </buckets>
                    <workers>
                        <workersPerNode>
                            <count>2</count>
                        </workersPerNode>
                    </workers>
                </distribution>
            </activity>
            <activity>
                <order>3</order>
                <identifier>third</identifier>
                <work>
                    <noOp>
                        <steps>3</steps>
                        <delay>100</delay>
                    </noOp>
                </work>
            </activity>
        </composition>
        <distribution>
            <subtasks/>
        </distribution>
    </activity>
</task>
