<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="8b04e48a-362d-4ec0-b09c-ad5e25115055">
    <name>task-child-restart-on-own-execution-time</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002" type="UserType"/>
    <executionState>closed</executionState>
    <activity>
        <composition>
            <activity>
                <order>1</order>
                <identifier>first</identifier>
                <work>
                    <noOp>
                        <steps>3</steps>
                        <delay>100</delay>
                    </noOp>
                </work>
            </activity>
            <activity>
                <order>2</order>
                <identifier>second</identifier>
                <work>
                    <noOp>
                        <steps>10</steps>
                        <delay>300</delay>
                    </noOp>
                </work>
                <policies>
                    <policy>
                        <name>Execution time at most 2 seconds</name>
                        <policyConstraints>
                            <executionTime>
                                <exceeds>PT2S</exceeds>
                            </executionTime>
                            <executionAttempts>
                                <below>2</below>
                            </executionAttempts>
                        </policyConstraints>
                        <policyActions>
                            <restartActivity>
                                <delay>500</delay>
                            </restartActivity>
                        </policyActions>
                    </policy>
                </policies>
            </activity>
            <activity>
                <order>3</order>
                <identifier>third</identifier>
                <work>
                    <noOp>
                        <steps>3</steps>
                        <delay>100</delay>
                    </noOp>
                </work>
            </activity>
        </composition>
    </activity>
</task>
