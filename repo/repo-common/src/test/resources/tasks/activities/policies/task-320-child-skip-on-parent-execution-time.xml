<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="ee54d77d-4a7c-4279-8b7c-01a4895be46c">
    <name>task-child-skip-on-own-execution-time</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002" type="UserType"/>
    <executionState>closed</executionState>
    <activity>
        <composition>
            <activity>
                <order>1</order>
                <identifier>first</identifier>
                <work>
                    <noOp>
                        <steps>3</steps>
                        <delay>100</delay>
                    </noOp>
                </work>
            </activity>
            <activity>
                <order>2</order>
                <identifier>second</identifier>
                <work>
                    <noOp>
                        <steps>10</steps>
                        <delay>300</delay>
                    </noOp>
                </work>
            </activity>
            <activity>
                <order>3</order>
                <identifier>third</identifier>
                <work>
                    <noOp>
                        <steps>3</steps>
                        <delay>100</delay>
                    </noOp>
                </work>
            </activity>
        </composition>
        <policies>
            <policy>
                <name>Execution time at most 2 seconds</name>
                <policyConstraints>
                    <executionTime>
                        <exceeds>PT2S</exceeds>
                    </executionTime>
                </policyConstraints>
                <policyActions>
                    <skipActivity/>
                </policyActions>
            </policy>
        </policies>
    </activity>
</task>
