<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="5b5132c5-0c06-4363-8b85-106a92a665d5">
    <name>task-multinode-suspend-on-execution-time</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002" type="UserType"/>
    <executionState>closed</executionState>
    <activity>
        <work>
            <noOp> <!-- 40 seconds total -->
                <steps>160</steps>
                <delay>250</delay>
            </noOp>
        </work>
        <policies>
            <policy>
                <policyConstraints>
                    <executionTime>
                        <exceeds>PT10S</exceeds>
                    </executionTime>
                </policyConstraints>
                <policyReaction>
                    <action>
                        <suspendTask/>
                    </action>
                </policyReaction>
            </policy>
        </policies>
        <distribution>
            <buckets>
                <implicitSegmentation>
                    <numberOfBuckets>4</numberOfBuckets>
                </implicitSegmentation>
            </buckets>
            <workers>
                <workersPerNode>
                    <count>2</count>
                </workersPerNode>
            </workers>
        </distribution>
    </activity>
</task>
