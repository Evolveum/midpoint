<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="83a0d9cc-6460-4c64-a047-08da9801f364">
    <name>task-simple-skip-on-execution-time</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002" type="UserType"/>
    <executionState>closed</executionState>
    <activity>
        <work>
            <noOp>
                <steps>10</steps>
                <delay>300</delay>
            </noOp>
        </work>
        <policies>
            <policy>
                <name>Execution time at most 2 seconds</name>
                <policyConstraints>
                    <executionTime>
                        <exceeds>PT2S</exceeds>
                    </executionTime>
                </policyConstraints>
                <policyActions>
                    <skipActivity/>
                </policyActions>
            </policy>
        </policies>
    </activity>
</task>
