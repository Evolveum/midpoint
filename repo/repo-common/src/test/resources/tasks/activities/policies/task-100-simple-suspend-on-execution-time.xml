<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="18bf2508-4582-4fab-99d4-964fd6d23858">
    <name>task-simple-suspend-on-execution-time</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002" type="UserType"/>
    <executionState>closed</executionState>
    <activity>
        <work>
            <noOp>
                <steps>10</steps>
                <delay>300</delay>
            </noOp>
        </work>
        <policies>
            <policy>
                <name>Execution time at most 2 seconds</name>
                <policyConstraints>
                    <executionTime>
                        <exceeds>PT2S</exceeds>
                    </executionTime>
                </policyConstraints>
                <policyReaction>
                    <action>
                        <suspendTask/>
                    </action>
                </policyReaction>
            </policy>
        </policies>
    </activity>
</task>
