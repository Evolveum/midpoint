<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="0efc26ef-3f3b-4113-a1be-a1392fbb79eb">
    <name>task-child-restart-on-own-execution-time</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002" type="UserType"/>
    <executionState>closed</executionState>
    <activity>
        <composition>
            <activity>
                <order>1</order>
                <identifier>first</identifier>
                <work>
                    <noOp>
                        <steps>3</steps>
                        <delay>100</delay>
                    </noOp>
                </work>
            </activity>
            <activity>
                <order>2</order>
                <identifier>second</identifier>
                <work>
                    <noOp>
                        <steps>10</steps>
                        <delay>300</delay>
                    </noOp>
                </work>
            </activity>
            <activity>
                <order>3</order>
                <identifier>third</identifier>
                <work>
                    <noOp>
                        <steps>3</steps>
                        <delay>100</delay>
                    </noOp>
                </work>
            </activity>
        </composition>
        <policies>
            <policy>
                <name>Execution time at most 2 seconds</name>
                <policyConstraints>
                    <executionTime>
                        <exceeds>PT2S</exceeds>
                    </executionTime>
                    <executionAttempts>
                        <below>2</below>
                    </executionAttempts>
                </policyConstraints>
                <policyReaction>
                    <action>
                        <restartActivity>
                            <delay>500</delay>
                        </restartActivity>
                    </action>
                </policyReaction>
            </policy>
        </policies>
    </activity>
</task>
