<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="0e8b3300-0e0e-49bd-84c8-c4c9e5c30976">
    <name>task-multinode-restart-on-execution-time</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002" type="UserType"/>
    <executionState>closed</executionState>
    <activity>
        <work>
            <noOp>
                <steps>40</steps>
                <delay>250</delay>
            </noOp>
        </work>
        <policies>
            <policy>
                <name>Execution time at most 2 seconds</name>
                <policyConstraints>
                    <executionTime>
                        <exceeds>PT2S</exceeds>
                    </executionTime>
                    <executionAttempts>
                        <below>2</below>
                    </executionAttempts>
                </policyConstraints>
                <policyActions>
                    <restartActivity>
                        <delay>500</delay>
                    </restartActivity>
                </policyActions>
            </policy>
        </policies>
        <distribution>
            <buckets>
                <implicitSegmentation>
                    <numberOfBuckets>4</numberOfBuckets>
                </implicitSegmentation>
            </buckets>
            <workers>
                <workersPerNode>
                    <count>2</count>
                </workersPerNode>
            </workers>
        </distribution>
    </activity>
</task>
