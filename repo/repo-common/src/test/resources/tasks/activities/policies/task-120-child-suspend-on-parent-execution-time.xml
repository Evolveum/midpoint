<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="1e6d612d-4ae9-4024-a9f9-fe8ed79d9c1f">
    <name>task-child-suspend-on-own-execution-time</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002" type="UserType"/>
    <executionState>closed</executionState>
    <activity>
        <composition>
            <activity>
                <order>1</order>
                <identifier>first</identifier>
                <work>
                    <noOp>
                        <steps>1</steps>
                        <delay>4000</delay>
                    </noOp>
                </work>
            </activity>
            <activity>
                <order>2</order>
                <identifier>second</identifier>
                <work>
                    <noOp>
                        <steps>200</steps>
                        <delay>100</delay>
                    </noOp>
                </work>
            </activity>
            <activity>
                <order>3</order>
                <identifier>third</identifier>
                <work>
                    <noOp>
                        <steps>3</steps>
                        <delay>100</delay>
                    </noOp>
                </work>
            </activity>
        </composition>
        <policies>
            <policy>
                <name>Execution time</name>
                <policyConstraints>
                    <executionTime>
                        <exceeds>PT8S</exceeds>
                    </executionTime>
                </policyConstraints>
                <policyReaction>
                    <action>
                        <suspendTask/>
                    </action>
                </policyReaction>
            </policy>
        </policies>
    </activity>
</task>
