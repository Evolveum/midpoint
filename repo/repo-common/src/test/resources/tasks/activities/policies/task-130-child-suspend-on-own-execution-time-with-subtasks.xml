<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="234c3ee7-8093-44b9-896d-e2fe2e0b4e47">
    <name>task-child-suspend-on-own-execution-time-with-subtasks</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002" type="UserType"/>
    <executionState>closed</executionState>
    <activity>
        <composition>
            <activity>
                <order>1</order>
                <identifier>first</identifier>
                <work>
                    <noOp>
                        <steps>3</steps>
                        <delay>100</delay>
                    </noOp>
                </work>
            </activity>
            <activity>
                <order>2</order>
                <identifier>second</identifier>
                <work>
                    <noOp>
                        <steps>10</steps>
                        <delay>300</delay>
                    </noOp>
                </work>
                <policies>
                    <policy>
                        <name>Execution time at most 2 seconds</name>
                        <policyConstraints>
                            <executionTime>
                                <exceeds>PT2S</exceeds>
                            </executionTime>
                        </policyConstraints>
                        <policyReaction>
                            <action>
                                <suspendTask/>
                            </action>
                        </policyReaction>
                    </policy>
                </policies>
            </activity>
            <activity>
                <order>3</order>
                <identifier>third</identifier>
                <work>
                    <noOp>
                        <steps>3</steps>
                        <delay>100</delay>
                    </noOp>
                </work>
            </activity>
        </composition>
        <distribution>
            <subtasks/>
        </distribution>
    </activity>
</task>
