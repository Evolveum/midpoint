<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="dc89a2c8-7d9b-46be-90a7-9be690ec2faf">
    <name>task-child-restart-on-root-execution-time-with-subtasks</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002" type="UserType"/>
    <executionState>closed</executionState>
    <activity>
        <composition>
            <activity>
                <order>1</order>
                <identifier>first</identifier>
                <work>
                    <noOp>
                        <steps>3</steps>
                        <delay>100</delay>
                    </noOp>
                </work>
            </activity>
            <activity>
                <order>2</order>
                <identifier>second</identifier>
                <work>
                    <noOp>
                        <steps>40</steps>
                        <delay>250</delay>
                    </noOp>
                </work>
                <distribution>
                    <buckets>
                        <implicitSegmentation>
                            <numberOfBuckets>4</numberOfBuckets>
                        </implicitSegmentation>
                    </buckets>
                    <workers>
                        <workersPerNode>
                            <count>2</count>
                        </workersPerNode>
                    </workers>
                </distribution>
            </activity>
            <activity>
                <order>3</order>
                <identifier>third</identifier>
                <work>
                    <noOp>
                        <steps>3</steps>
                        <delay>100</delay>
                    </noOp>
                </work>
            </activity>
        </composition>
        <policies>
            <policy>
                <name>Execution time at most 2 seconds</name>
                <policyConstraints>
                    <executionTime>
                        <exceeds>PT2S</exceeds>
                    </executionTime>
                    <executionAttempts>
                        <below>2</below>
                    </executionAttempts>
                </policyConstraints>
                <policyActions>
                    <restartActivity>
                        <delay>500</delay>
                    </restartActivity>
                </policyActions>
            </policy>
        </policies>
        <distribution>
            <subtasks/>
        </distribution>
    </activity>
</task>
