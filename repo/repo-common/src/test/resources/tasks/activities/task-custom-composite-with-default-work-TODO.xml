<task oid="694a5aae-d869-4b58-a6dc-aad4c5cc1e4d"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:ext="http://midpoint.evolveum.com/xml/ns/repo-common-test/extension">
    <name>task-custom-composite-with-default-work</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002"/>
    <executionState>runnable</executionState>
    <activity>
        <composition>
            <defaultWorkDefinition>
                <extension>
                    <ext:compositeMock>
                        <ext:message>A</ext:message>
                    </ext:compositeMock>
                </extension>
            </defaultWorkDefinition>
            <activity>
                <order>1</order>
                <!-- uses default fully -->
            </activity>
            <activity>
                <order>2</order>
                <work>
                    <extension>
                        <!-- overrides default fully (different type) -->
                        <ext:simpleMock>
                            <ext:message>Hello</ext:message>
                        </ext:simpleMock>
                    </extension>
                </work>
            </activity>
            <activity>
                <order>3</order>
                <work>
                    <extension>
                        <ext:compositeMock>
                            <ext:message>B</ext:message>
                        </ext:compositeMock>
                    </extension>
                </work>
            </activity>
            <activity>
                <order>4</order>
                <work>
                    <extension>
                        <ext:compositeMock>
                            <!-- inherites 'A' -->
                            <ext:opening>false</ext:opening>
                            <ext:closing>true</ext:closing>
                        </ext:compositeMock>
                    </extension>
                </work>
            </activity>
        </composition>
    </activity>
</task>
