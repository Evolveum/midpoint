            </recomputation>
        </work>
    </activity>

    <postActivity>
        <work>
            <scripting>
                <executeScript>
                    <s:execute>
                        <s:script>
                            <code>log.info('done')</code>
                        </s:script>
                    </s:execute>
                </executeScript>
            </scripting>
        </work>
    </postActivity>

</task>
