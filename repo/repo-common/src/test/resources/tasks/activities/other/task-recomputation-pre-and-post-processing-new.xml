    <archetypeRef oid="00000000-0000-0000-0000-000000000502"/> <!-- !!! -->
    <ownerRef oid="00000000-0000-0000-0000-000000000002"/>
    <executionState>runnable</executionState>

    <preActivity>
        <work>
            <scripting>
                <executeScript>
                    <s:execute>
                        <s:script>
                            <code>log.info('get ready')</code>
                        </s:script>
                    </s:execute>
                </executeScript>
            </scripting>
        </work>
