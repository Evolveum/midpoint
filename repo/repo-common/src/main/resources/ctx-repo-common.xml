<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.evolveum.midpoint.repo.common"/>
    <context:spring-configured/>

    <!-- The beans from repo-common are not wired here. They are wired in model-impl as we want to
         place the right dependencies there. E.g. we want to inject modelResolver at proper places
         in those beans. And it is only model-impl when all the implementations are available. -->

</beans>
