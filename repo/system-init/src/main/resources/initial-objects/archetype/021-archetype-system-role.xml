<archetype oid="00000000-0000-0000-0000-000000000320"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
>
    <name>System role</name>
    <description>
        Archetype for roles that are essential from the system point
        of view. Those are usually roles for the most powerful system
        administrators, roles for internal usage in the system
        (e.g. by tasks) and so on.
    </description>
    <archetypePolicy>
        <display>
            <label>
                <orig>System role</orig>
                <translation>
                    <key>systemRole.label</key>
                </translation>
            </label>
            <pluralLabel>
                <orig>System roles</orig>
                <translation>
                    <key>systemRoles.pluralLabel</key>
                </translation>
            </pluralLabel>
            <icon>
                <cssClass>fe fe-role</cssClass>
                <color>#da0000</color>
            </icon>
        </display>
    </archetypePolicy>
    <assignment id="1">
        <identifier>holderType</identifier>
        <assignmentRelation id="2">
            <holderType>RoleType</holderType>
        </assignmentRelation>
    </assignment>
</archetype>
