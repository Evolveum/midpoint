    <name>Dashboard report</name>
    <archetypePolicy>
        <display>
            <label>
                <orig>Dashboard report</orig>
                <translation>
                    <key>dashboardReport.label</key>
                </translation>
            </label>
            <pluralLabel>
                <orig>Dashboard reports</orig>
                <translation>
                    <key>DashboardReports.title</key>
                </translation>
            </pluralLabel>
            <icon>
                <cssClass>fa fa-tachometer-alt</cssClass>
                <color>#001F3F</color>
            </icon>
        </display>
        <itemConstraint id="1">
            <path>objectCollection</path>
            <visibility>hidden</visibility>
        </itemConstraint>
        <adminGuiConfiguration>
            <objectDetails>
                <type>ReportType</type>
                <panel id="2">
                    <identifier>engine</identifier>
                    <displayOrder>11</displayOrder>
                    <display>
                        <label>
                            <orig>Engine</orig>
                            <translation>
                                <key>engine.panel.label</key>
                            </translation>
                        </label>
