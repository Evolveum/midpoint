<tag xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
    oid="00000000-0000-0000-0000-000000000716">
    <name>Focus role membership changed</name>
    <description>Operation that changed the focus role membership (roleMembershipRef value)</description>
    <policyRule>
        <name>focus-role-membership-changed</name>
        <policyConstraints>
            <modification>
                <name>$focus-role-membership-changed</name>
                <operation>modify</operation>
                <item>roleMembershipRef</item>
            </modification>
        </policyConstraints>
        <focusSelector>
            <type>FocusType</type>
        </focusSelector>
    </policyRule>
</tag>
