<archetype  xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
            xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
            oid="b27830c5-f02a-4273-ab7e-b6bd0e1026dc">
    <name>Teacher</name>
    <description>
        Archetype for teachers
    </description>
    <assignment>
        <assignmentRelation>
            <holderType>UserType</holderType>
        </assignmentRelation>
    </assignment>
    <inducement>
        <focusMappings>
            <mapping>
                <strength>weak</strength>
                <expression>
                    <value>employee</value>
                </expression>
                <target>
                    <c:path>subtype</c:path>
                </target>
            </mapping>
        </focusMappings>
    </inducement>
    <archetypePolicy>
        <display>
            <label>Teacher</label>
            <pluralLabel>Teachers</pluralLabel>
            <icon>
                <cssClass>fa fa-magic</cssClass>
                <color>purple</color>
            </icon>
        </display>
    </archetypePolicy>
</archetype>

