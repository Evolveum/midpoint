<functionLibrary oid="03eadaea-d82a-11e8-866b-9bd3716fdfc1" 
    xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-4"
    xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-4" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:t='http://prism.evolveum.com/xml/ns/public/types-4'>

	<name>Hello</name>

	<function>
        <name>hello</name>
        <parameter>
            <name>value</name>
            <type>xsd:string</type>
        </parameter>
        <returnType>t:PolyStringType</returnType>
        <script>
            <code><![CDATA[
                if (!value) {
                  return null;
                };

                return "Hello " + value;]]></code>
        </script>
    </function>

</functionLibrary>
