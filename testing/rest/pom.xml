                <configuration>
                    <!-- Doesn't have any unit tests, only integration. -->
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <configuration>
                    <skipTests>${skipRestTests}</skipTests>
                </configuration>
            </plugin>
        </plugins>
    </build>

