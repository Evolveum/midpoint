<role oid="00000000-role-0000-0000-999111111223">
    <name>Metarole stop on activation change (2)</name>
    <inducement>
        <policyRule>
            <name>Change activation</name>
            <policyConstraints>
                <modification>
                    <operation>modify</operation>
                    <item>activation/administrativeStatus</item>
                </modification>
            </policyConstraints>
            <policyThreshold>
                <lowWaterMark>
                    <count>3</count>
