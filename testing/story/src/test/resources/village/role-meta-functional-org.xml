<!-- This is a meta-role. A Role indented to be assigned to other roles.
     I really mean assigned, not included or induced. -->

<role oid="74aac2c8-ca0f-11e3-bb29-001e8c717e5b"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:t="http://prism.evolveum.com/xml/ns/public/types-3"
        xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3"
        xmlns:piracy="http://midpoint.evolveum.com/xml/ns/samples/piracy">
    <name>Functional Orgstruct Metarole</name>

    <inducement>
        <focusMappings>
            <mapping>
                <source>
                    <path>$immediateRole/identifier</path>
                </source>
                <target>
                    <path>$focus/organizationalUnit</path>
                </target>
            </mapping>
        </focusMappings>
        <order>2</order>
    </inducement>

</role>
