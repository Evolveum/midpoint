            <!--        <interval>20</interval>-->
            <!--    </beforeItemCondition>-->
            <!--    <tracingProfile>-->
            <!--        <fileNamePattern>trace-minimal %{timestamp} %{focusName} %{milliseconds}</fileNamePattern>-->
            <!--        <tracingTypeProfile>-->
            <!--            <level>minimal</level>-->
            <!--        </tracingTypeProfile>-->
            <!--    </tracingProfile>-->
            <!--</tracing>-->
            <!--<tracing>-->
