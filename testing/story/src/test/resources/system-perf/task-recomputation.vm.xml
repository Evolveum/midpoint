<!--
Parameters:
 - workerThreads
 - workerTasks
 - bucketing
 - oidSegmentationDepth
-->

<task oid="f5920848-6c8f-4eda-ae26-2b961d6dae1b"
      xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
      xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3">

    <name>task-recomputation</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002"/>
    <executionState>runnable</executionState>
    <activity>
        <work>
            <recomputation>
                <objects>
                    <type>UserType</type>
                    <query>
                        <q:filter>
                            <q:substring>
                                <q:path>name</q:path>
                                <q:value>u-</q:value>
                                <q:anchorStart>true</q:anchorStart>
                            </q:substring>
                        </q:filter>
                    </query>
                </objects>
            </recomputation>
        </work>
        <distribution>
            <workerThreads>$workerThreads</workerThreads>
#if($workerTasks > 0)
            <workers>
                <workersPerNode>
                    <count>$workerTasks</count>
                </workersPerNode>
            </workers>
#end
#if($bucketing)
            <buckets>
                <oidSegmentation>
                    <depth>$oidSegmentationDepth</depth>
                </oidSegmentation>
            </buckets>
#end
        </distribution>
        <!--<reporting>-->
        <!--    <tracing>-->
        <!--        <interval>1</interval>-->
        <!--        <tracingProfile>-->
        <!--            <fileNamePattern>trace %{timestamp} %{focusName} %{milliseconds}</fileNamePattern>-->
        <!--            <tracingTypeProfile>-->
        <!--                <level>off</level>-->
        <!--            </tracingTypeProfile>-->
        <!--        </tracingProfile>-->
        <!--    </tracing>-->
        <!--</reporting>-->
    </activity>
</task>
