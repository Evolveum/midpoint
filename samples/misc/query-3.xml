<query xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
       xmlns="http://prism.evolveum.com/xml/ns/public/query-3"
       xmlns:foo="http://foo.com/">

   <!-- Query filter example -->

    <and>
        <equal>
            <path>c:extension</path>
            <value>
                <foo:bar>baz</foo:bar>
            </value>
        </equal>
        <not>
            <true>
                <property>c:extension/foo:barbar</property>
            </true>
        </not>
        <present>
            <property>c:extension/foo:x</property>
        </present>
        <or>
            <substring>
                <property>c:extension/foo:y</property>
                <value>a*b</value>
            </substring>
            <lessOrEqual>
                <property>c:extension/foo:n</property>
                <value>100</value>
            </lessOrEqual>
            <equal>
                <path>c:extension</path>
                <value>
                    <foo:foofoo>
                        <foo:foo foo="foo"><foo:foofoo/></foo:foo>
                    </foo:foofoo>
                </value>
            </equal>
        </or>
    </and>
    
</query>
