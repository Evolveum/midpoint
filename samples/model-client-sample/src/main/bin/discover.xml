<!--
  
  A script that discovers connectors on a connector host with a given hostname (specified with -Dhostname=xyz).
  
  Run it with
  
  runscript -s discover.xml -Dhostname=xyz
  
-->

<s:search xmlns:s="http://midpoint.evolveum.com/xml/ns/public/model/scripting-3" xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3">
    <s:type>c:ConnectorHostType</s:type>
    <s:searchFilter>
        <equal xmlns="http://prism.evolveum.com/xml/ns/public/query-3">
            <path>c:hostname</path>
            <value>[[!!hostname!!]]</value>
        </equal>
    </s:searchFilter>
    <s:action>
        <s:type>discover-connectors</s:type>
    </s:action>
</s:search>
