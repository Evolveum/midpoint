    		<filter>
    			<q:equal>
    				<q:path>requestable</q:path>
    				<q:value>true</q:value>
    			</q:equal>
    		</filter>
    	</target>
    </authorization>
-->
    <authorization>
    	<name>self-execution-modify</name>
    	<action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#modify</action>
    	<phase>execution</phase>
    	<object>
    		<special>self</special>
    	</object>
    	<item>credentials</item>
<!-- Intentionally commented out
    	<item>assignment</item>
    	<item>parentOrgRef</item>
    	<item>roleMembershipRef</item>
-->
    </authorization>
    <authorization>
    	<name>self-sahdow-execution-modify</name>
    	<action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#modify</action>
    	<phase>execution</phase>
    	<object>
    		<type>ShadowType</type>
    		<owner>
    			<special>self</special>
    		</owner>
    	</object>
    	<item>credentials</item>
    </authorization>

<!-- XXX Authorization to read own organization and its content including the path from root ... -->
    <authorization>
	<name>Magic read only</name>
	<action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#read</action>
        <object>
            <orgRelation>
                <scope>allDescendants</scope>
                <includeReferenceOrg>true</includeReferenceOrg>
            </orgRelation>
        </object>
    </authorization>

    <authorization>
	<name>Read for all resources and roles of roleType=customer and End User</name>
        <action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#read</action>
        <object>
            <type>ResourceType</type>
        </object>
        <object>
            <type>ServiceType</type>
        </object>
        <object>
            <type>RoleType</type>
            <filter>
                 <q:or>
                    <q:equal>
                            <q:path>roleType</q:path>
                            <q:value>customer</q:value>
                    </q:equal>
                    <q:equal>
                            <q:path>name</q:path>
                            <q:value>End user</q:value>
                    </q:equal>
               </q:or>
            </filter>
        </object>
    </authorization>
<!-- Request a role will not work (fail) -->
    <!-- XXX XXX still roles can be "assigned" in GUI (will fail in model)-->
<!-- https://jira.evolveum.com/browse/MID-2146 -->
    <authorization>
	<name>Do not allow to assign anything for self</name>
	<decision>deny</decision>
        <action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#assign</action>
        <action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#unassign</action>
 	<phase>request</phase>
        <object>
            <type>RoleType</type>
        </object>
    </authorization>
    <requestable>false</requestable>
    <roleType>customer</roleType>
</role>
