<s:executeScript
        xmlns:s="http://midpoint.evolveum.com/xml/ns/public/model/scripting-4"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-4"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <s:action>
        <s:type>execute-script</s:type>
        <s:parameter>
            <s:name>script</s:name>
            <c:value xsi:type="c:ScriptExpressionEvaluatorType">
                <c:code>
                    import javax.xml.namespace.*
                    import com.evolveum.prism.xml.ns._public.query_3.*

                    queryText = '''
                        &lt;query&gt;
                            &lt;filter&gt;
                                &lt;inOid&gt;
                                    &lt;value&gt;00000000-0000-0000-0000-000000000002&lt;/value&gt;
                                &lt;/inOid&gt;
                            &lt;/filter&gt;
                        &lt;/query&gt;'''
                    query = prismContext.parserFor(queryText).xml().parseRealValue(QueryType.class)
                    midpoint.submitTaskFromTemplate('78a39955-743b-480f-86c0-9dbeafdbaba6',
                        [(new QName('http://midpoint.evolveum.com/xml/ns/public/model/extension-4', 'objectQuery')):query])
                </c:code>
            </c:value>
        </s:parameter>
        <s:parameter>
            <s:name>forWholeInput</s:name>
            <c:value>true</c:value>
        </s:parameter>
    </s:action>
</s:executeScript>
