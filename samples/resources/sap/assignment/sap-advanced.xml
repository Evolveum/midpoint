                <displayName>last logon date + time</displayName>
                <inbound>
                    <source>
                    	<name>ltime</name>
                        <path>$account/attributes/ri:LOGONDATA.LTIME</path>
                    </source>
                    <expression>
                        <script>
                            <code>
                                if (input!=null) {
                                    if (ltime!=null) {
                                        return input+ltime;
                                    }
                                    retrn input;
                                }
                            </code>
                        </script>
                    </expression>
                    <target>
