			<configured>
				<cap:activation>
					<cap:status>
						<cap:attribute>ri:XXXXXXXXXXXXXXXXXXXXXXXXXX</cap:attribute>
						<cap:enableValue/>
						<cap:disableValue>true</cap:disableValue>
					</cap:status>
				</cap:activation>
			</configured>
		</capabilities>
-->

	</resource>

</objects>
