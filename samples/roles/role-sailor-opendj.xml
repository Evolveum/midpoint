<role oid="12345678-d34d-b33f-f00d-111111111111"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">
    <name>Sailor OpenDJ</name>
    <description>
     A basic role, that specifies account on OpenDJ resource
     and also sets "employeeType" attribute to a fixed value and it sets "destinationIndicator"
     as a copy of a user property.
    </description>
    <inducement>
    	<construction>
    		<!-- The c: prefix in type must be there due to a JAXB bug -->
    		<resourceRef oid="ef2bc95b-76e0-48e2-86d6-3d4f02d3e1a3" type="c:ResourceType"/>
    		<attribute>
                	<ref>ri:employeeType</ref>
                	<outbound>
                    	<expression>
                			<value>sailor</value>
                		</expression>
                	</outbound>
                </attribute>
                <attribute> 
                    <ref>ri:destinationIndicator</ref>
                    <outbound>
                    	<source>
                    		<path>$user/employeeNumber</path>
                    	</source>
                    </outbound>
                </attribute>
    	</construction>
    </inducement>
    <requestable>true</requestable>
</role>
