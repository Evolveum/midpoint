<role oid="10000000-0000-0000-0000-000000006604"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:t="http://prism.evolveum.com/xml/ns/public/types-3"
        xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3"
        xmlns:piracy="http://midpoint.evolveum.com/xml/ns/samples/piracy">
    <name>Customer Metarole</name>
   
    <inducement>
    	<construction>
    		<!-- Gitlab resource -->
    		<resourceRef oid="00000000-dead-dead-beef-000000a00008" type="c:ResourceType"/>
    		<kind>entitlement</kind>
		<intent>group</intent>
    	</construction>
    </inducement>

    <inducement>
    	<construction>
    		<!-- OpenLDAP resource -->
    		<resourceRef oid="d0811790-1d80-11e4-86b2-3c970e467874" type="c:ResourceType"/>
    		<kind>generic</kind>
		<intent>customer</intent>
    	</construction>
    </inducement>

    <inducement>
        <focusMappings>
                <mapping>
                        <expression>
				<value>customer</value>
                        </expression>
                        <target>
                                <path>$focus/orgType</path>
                        </target>
                </mapping>
        </focusMappings>
    </inducement>

</role>
