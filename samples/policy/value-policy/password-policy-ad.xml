<valuePolicy oid="81818181-76e0-59e2-8888-3d4f02d3fffc" 
	xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
	xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<name>AD Password Policy</name>
	<description>Password policy that roughly corresponds to default AD settings</description>
	<lifetime>
		<expiration>42</expiration>
		<warnBeforeExpiration>9</warnBeforeExpiration>
		<lockAfterExpiration>0</lockAfterExpiration>
		<minPasswordAge>1</minPasswordAge>
		<passwordHistoryLength>24</passwordHistoryLength>
	</lifetime>
	<stringPolicy>
		<limitations>
			<minLength>7</minLength>
			<limit>
				<description>Lowercase alphanumeric characters</description>
				<minOccurs>1</minOccurs>
				<mustBeFirst>false</mustBeFirst>
				<characterClass>
					<value>abcdefghijklmnopqrstuvwxyz</value>
				</characterClass>
			</limit>
			<limit>
				<description>Uppercase alphanumeric characters</description>
				<minOccurs>1</minOccurs>
				<mustBeFirst>false</mustBeFirst>
				<characterClass>
					<value>ABCDEFGHIJKLMNOPQRSTUVWXYZ</value>
				</characterClass>
			</limit>
			<limit>
				<description>Numeric characters</description>
				<minOccurs>1</minOccurs>
				<mustBeFirst>false</mustBeFirst>
				<characterClass>
					<value>1234567890</value>
				</characterClass>
			</limit>
		</limitations>
	</stringPolicy>
</valuePolicy>
	

</objects>
