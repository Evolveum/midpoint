<!-- User template that demonstrates advanced usage such as account assignment and RB-RBAC -->

<objectTemplate oid="c0c010c0-d34d-b33f-f00d-777333333333"
   xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns='http://midpoint.evolveum.com/xml/ns/public/common/common-3'
   xmlns:c='http://midpoint.evolveum.com/xml/ns/public/common/common-3'
   xmlns:t='http://prism.evolveum.com/xml/ns/public/types-3'>


        <name>Default User Template 3</name>

        <description>
            User Template Object.
            This object is used when creating a new user or changing an existing user, to set it up as needed.
        </description>
        
        <mapping>
            <description>
                Property mapping.
                Defines how properties of user object are set up.
                This specific definition sets a full name as a concatenation
                of givenName and familyName.
            </description>
            <strength>weak</strength>
            <source>
                <path>$user/givenName</path>
            </source>
            <source>
                <path>$user/familyName</path>
            </source>
            <expression>
                <script>
                    <language>http://midpoint.evolveum.com/xml/ns/public/expression/language#Groovy</language>
                    <code>
                        givenName + ' ' + familyName
                    </code>
                </script>
            </expression>
            <target>
                <path>$user/fullName</path>
            </target>
        </mapping>
        
         <mapping>
            <description>
                Property mapping.
                Defines how properties of user object are set up.
                This specific definition sets a nickname as a concatenation
                of 'nick_' and givenName.
            </description>
            <strength>weak</strength>
            <source>
                <path>$user/givenName</path>
            </source>
            <expression>
                <script>
                    <language>http://midpoint.evolveum.com/xml/ns/public/expression/language#Groovy</language>
                    <code>
                        'nick_' + givenName
                    </code>
                </script>
            </expression>
            <target>
                <path>$user/nickName</path>
            </target>
        </mapping>

    </objectTemplate>
