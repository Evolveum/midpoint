<configuration scan="true" scanPeriod="30 seconds">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%message%n</pattern>
        </encoder>
    </appender>

    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%message%n</pattern>
        </encoder>
    </appender>

    <appender name="LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="com.evolveum.midpoint.cli.ninja.util.ConsoleFilter"/>
        <Append>true</Append>
        <File>ninja.log</File>
        <encoder>
            <pattern>%date [%thread] %-5level \(%logger{46}\): %message%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>ninja.log.%d{yyyy-MM-dd}</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>4</maxHistory>
        </rollingPolicy>
    </appender>

    <root level="ERROR">
        <appender-ref ref="LOG"/>
    </root>

    <logger name="SYSOUT" level="ALL">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="SYSERR" level="ALL">
        <appender-ref ref="STDERR"/>
    </logger>

    <logger name="com.evolveum.midpoint.cli.seppuku" level="ERROR"/>

    <include optional="true" file="./logback-seppuku.xml"/>
</configuration>
