<mapping xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3">
    <source>
        <path>$user/name</path>
    </source>
    <source>
        <path>$user/employeeNumber</path>
    </source>
    <expression>
        <script>
            <code>'Landlubber '+ name</code>
        </script>
    </expression>
    <condition>
        <script>
            <code>employeeNumber == null || employeeNumber?.length() == 0</code>
        </script>
    </condition>
</mapping>
