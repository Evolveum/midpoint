<resource oid="8582b8d8-7f29-4dbd-85f6-d674ca40df96"
          xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
          xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
          xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
          xmlns:icfs="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/resource-schema-3"
          xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">

    <name>resource-dummy-correlation</name>
    <connectorRef type="c:ConnectorType">
        <filter>
            <q:and>
                <q:equal>
                    <q:path>connectorType</q:path>
                    <q:value>com.evolveum.icf.dummy.connector.DummyConnector</q:value>
                </q:equal>
                <q:equal>
                    <q:path>connectorVersion</q:path>
                    <q:value>2.0</q:value>
                </q:equal>
            </q:and>
        </filter>
    </connectorRef>
    <connectorConfiguration xmlns:icfi="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/bundle/com.evolveum.icf.dummy/com.evolveum.icf.dummy.connector.DummyConnector"
                   xmlns:icfc="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/connector-schema-3">
        <icfc:configurationProperties>
            <icfi:instanceId>correlation-test</icfi:instanceId>
        </icfc:configurationProperties>
    </connectorConfiguration>

    <schemaHandling>
        <objectType>
            <kind>account</kind>
            <intent>default</intent>
            <default>true</default>
            <objectClass>ri:AccountObjectClass</objectClass>
            <focus>
                <type>UserType</type>
            </focus>
            <attribute>
                <ref>icfs:name</ref>
            </attribute>
            <attribute>
                <ref>icfs:uid</ref>
            </attribute>
            <attribute>
                <ref>ri:correlator</ref>
            </attribute>
            <attribute>
                <ref>ri:employeeNumber</ref>
                <inbound>
                    <target>
                        <path>employeeNumber</path>
                    </target>
                </inbound>
            </attribute>
            <attribute>
                <ref>ri:givenName</ref>
                <inbound>
                    <target>
                        <path>givenName</path>
                    </target>
                </inbound>
            </attribute>
            <attribute>
                <ref>ri:familyName</ref>
                <inbound>
                    <target>
                        <path>familyName</path>
                    </target>
                </inbound>
            </attribute>
            <attribute>
                <ref>ri:honorificPrefix</ref>
                <inbound>
                    <target>
                        <path>honorificPrefix</path>
                    </target>
                </inbound>
            </attribute>
            <attribute>
                <ref>ri:costCenter</ref>
                <inbound>
                    <target>
                        <path>costCenter</path>
                    </target>
                </inbound>
            </attribute>
            <attribute>
                <ref>ri:dateOfBirth</ref>
            </attribute>
            <mappingsEvaluation>
                <inbound>
                    <defaultEvaluationPhases>
                        <phase>beforeCorrelation</phase>
                    </defaultEvaluationPhases>
                </inbound>
            </mappingsEvaluation>
        </objectType>
    </schemaHandling>
</resource>
