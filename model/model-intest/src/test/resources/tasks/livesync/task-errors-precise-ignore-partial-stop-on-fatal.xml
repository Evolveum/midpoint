<task oid="6873df7b-e663-4070-868f-c75aa19c391c"
    xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
    xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">

    <name>task-errors-precise-ignore-partial-stop-on-fatal</name>

    <ownerRef oid="00000000-0000-0000-0000-000000000002"/>
    <executionState>runnable</executionState>

    <activity>
        <work>
            <liveSynchronization>
                <resourceObjects>
                    <resourceRef oid="a20bb7b7-c5e9-4bbb-94e0-79e7866362e6" /> <!-- errors-source-precise -->
                    <objectclass>ri:AccountObjectClass</objectclass>
                </resourceObjects>
            </liveSynchronization>
        </work>
        <controlFlow>
            <errorHandling>
                <entry>
                    <situation>
                        <status>partial_error</status>
                    </situation>
                    <reaction>
                        <ignore/>
                    </reaction>
                </entry>
                <entry>
                    <situation>
                        <status>fatal_error</status>
                    </situation>
                    <reaction>
                        <stop/>
                    </reaction>
                </entry>
            </errorHandling>
        </controlFlow>
    </activity>
</task>
