<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="54464a8e-7cd3-47e3-9bf6-0d07692a893b">
    <name>Simple noop</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002" type="UserType"/>
    <executionState>runnable</executionState>
    <activity>
        <work>
            <noOp>
                <steps>40</steps>
                <delay>500</delay>
            </noOp>
        </work>
        <policies>
            <policy>
                <name>Max. 5s execution</name>
                <policyConstraints>
                    <executionTime>
                        <exceeds>PT5S</exceeds>
                    </executionTime>
                </policyConstraints>
                <policyActions>
                    <notification/>
                    <suspendTask/>
                </policyActions>
            </policy>
        </policies>
    </activity>
</task>
