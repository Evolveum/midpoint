<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="0020d7c9-5eac-4ad5-a900-e342ffb775e4">
    <name>Simple noop restart activity</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002" type="UserType"/>
    <executionState>runnable</executionState>
    <activity>
        <work>
            <noOp>
                <steps>10</steps>
                <delay>500</delay>
            </noOp>
        </work>
        <policies>
            <policy>
                <name>Max. 3s execution</name>
                <policyConstraints>
                    <executionTime>
                        <exceeds>PT3S</exceeds>
                    </executionTime>
                </policyConstraints>
                <policyReaction>
                    <name>restart me</name>
                    <action>
                        <restartActivity>
                            <delay>2000</delay>
                            <restartCounters>true</restartCounters>
                        </restartActivity>
                    </action>
                </policyReaction>
                <order>20</order>
            </policy>

            <policy>
                <name>count restarts</name>
                <policyConstraints>
                    <restartActivity/>
                </policyConstraints>
                <policyReaction>
                    <name>suspend the task because of me</name>
                    <threshold>
                        <lowWaterMark>
                            <count>2</count>
                        </lowWaterMark>
                    </threshold>
                    <action>
                        <suspendTask/>
                    </action>
                </policyReaction>
                <order>10</order>
            </policy>
        </policies>
    </activity>
</task>
