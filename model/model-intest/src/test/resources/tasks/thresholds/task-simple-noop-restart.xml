            <!--            <lowWaterMark>-->
            <!--                <count>2</count>-->
            <!--            </lowWaterMark>-->
            <!--        </threshold>-->
            <!--        <action>-->
            <!--            <suspendTask/>-->
            <!--        </action>-->
            <!--    </policyReaction>-->
            <!--</policy>-->
        </policies>
    </activity>
</task>
