<role oid="630d103c-7d1e-4d71-b7ff-027e052c1622"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3">
    <name>Stop on create 3th user</name>
    <inducement>
        <policyRule>
            <policyConstraints>
                <or>
                    <modification>
                        <operation>add</operation>
                    </modification>
                </or>
            </policyConstraints>
            <policyThreshold>
                <lowWaterMark>
                    <count>2</count>
                    <!--<percentage>30</percentage>-->
                </lowWaterMark>
            </policyThreshold>
            <policyActions>
                <notification/>
                <suspendTask/>
            </policyActions>
        </policyRule>
        <order>2</order>
    </inducement>
</role>

