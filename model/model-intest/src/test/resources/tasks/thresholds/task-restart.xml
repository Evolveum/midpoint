<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="42b2e700-763b-4089-9eb5-092396766a51">
    <name>Restart noop</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002" type="UserType"/>
    <executionState>runnable</executionState>
    <activity>
        <identifier>activity to be restarted</identifier>
        <work>
            <noOp>
                <steps>6</steps>
                <delay>400</delay>
            </noOp>
        </work>
        <policies>
            <policy>
                <name>1s execution</name>
                <policyConstraints>
                    <executionTime>
                        <exceeds>PT1S</exceeds>
                    </executionTime>
                    <executionAttempts>
                        <below>3</below>
                    </executionAttempts>
                </policyConstraints>
                <policyReaction>
                    <name>restart activity</name>
                    <action>
                        <restartActivity>
                            <delay>1000</delay>
                        </restartActivity>
                    </action>
                </policyReaction>
            </policy>
        </policies>
    </activity>
</task>
