<task xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        oid="38d0f53c-5e01-44dc-8d6a-439e0153b4d8">
    <name>Execution time notification</name>
    <ownerRef oid="00000000-0000-0000-0000-000000000002" type="UserType"/>
    <executionState>runnable</executionState>
    <activity>
        <identifier>main activity</identifier>
        <work>
            <noOp>
                <steps>20</steps>
                <delay>400</delay>
            </noOp>
        </work>
        <policies>
            <policy>
                <name>First notification</name>
                <policyConstraints>
                    <executionTime>
                        <exceeds>PT1S</exceeds>
                        <below>PT2S</below>
                    </executionTime>
                </policyConstraints>
                <policyActions>
                    <notification/>
                </policyActions>
            </policy>
            <policy>
                <name>First notification</name>
                <policyConstraints>
                    <executionTime>
                        <exceeds>PT1S</exceeds>
                        <below>PT2S</below>
                    </executionTime>
                </policyConstraints>
                <policyActions>
                    <notification/>
                </policyActions>
            </policy>
            <policy>
                <name>Third notification and suspend</name>
                <policyConstraints>
                    <executionTime>
                        <exceeds>PT2S</exceeds>
                        <below>PT4S</below>
                    </executionTime>
                </policyConstraints>
                <policyActions>
                    <notification/>
                    <suspendTask/>
                </policyActions>
            </policy>
        </policies>
    </activity>
</task>
