<archetype oid="00000000-0000-0000-0000-000000000508"
           xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
           xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
           xmlns:scext="http://midpoint.evolveum.com/xml/ns/public/model/scripting/extension-3">
    <name>Single bulk action task</name>
    <archetypePolicy>
        <display>
            <label>Single bulk action task</label>
            <pluralLabel>Single bulk action tasks</pluralLabel>
            <icon>
                <cssClass>fa fa-bullseye</cssClass>
                <color>green</color>
            </icon>
        </display>
        <itemConstraint>
            <path>extension</path>
            <visibility>vacant</visibility>
        </itemConstraint>
        <itemConstraint>
            <path>extension/scext:executeScript</path>
            <visibility>visible</visibility>
        </itemConstraint>
        <adminGuiConfiguration>
            <objectDetails>
                <type>TaskType</type>
                <panel>
                    <identifier>activity</identifier>
                    <panel>
                        <identifier>work</identifier>
                        <container>
                            <identifier>work-noniterative-scripting</identifier>
                            <path>activity/work/nonIterativeScripting</path>
                        </container>
                    </panel>
                </panel>
                <panel>
                    <identifier>taskBasic</identifier>
                    <container>
                        <identifier>bulk-action</identifier>
                        <display>
                            <label>SingleBulkActionTask.bulkAction</label>
                        </display>
                        <item>
                            <c:path>extension/scext:executeScript</c:path>
                        </item>
                    </container>
                </panel>
            </objectDetails>
        </adminGuiConfiguration>
    </archetypePolicy>
    <assignment>
        <assignmentRelation>
            <holderType>TaskType</holderType>
        </assignmentRelation>
    </assignment>
    <inducement>
        <focusMappings>
            <mapping>
                <strength>weak</strength>
                <expression>
                    <value>http://midpoint.evolveum.com/xml/ns/public/model/scripting/handler-3</value>
                </expression>
                <target>
                    <c:path>handlerUri</c:path>
                </target>
            </mapping>
        </focusMappings>
    </inducement>
    <inducement>
        <focusMappings>
            <mapping>
                <strength>weak</strength>
                <expression>
                    <value>BulkActions</value>
                </expression>
                <target>
                    <c:path>category</c:path>
                </target>
            </mapping>
        </focusMappings>
    </inducement>
</archetype>
