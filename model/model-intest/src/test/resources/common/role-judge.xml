<role oid="12345111-1111-2222-1111-121212111111"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:t="http://prism.evolveum.com/xml/ns/public/types-3"
        xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance/10000000-0000-0000-0000-000000000004">
    <name>Judge</name>
    <description>Role with role exclusions</description>
    <assignment>
    	<policyRule>
    		<name>criminal exclusion: Pirate</name>
    		<policyConstraints>
		    	<exclusion>
			    	<description>A judge cannot be a pirate at the same time. At least not openly.</description>
			    	<targetRef oid="12345678-d34d-b33f-f00d-555555556666" type="RoleType"/> <!-- Pirate -->
		    	</exclusion>
		    </policyConstraints>
		    <policyActions>
		    	<enforcement/>
		    </policyActions>
    	</policyRule>
    </assignment>    
    <assignment>
    	<policyRule>
    		<name>criminal exclusion: Thief</name>
    		<policyConstraints>
		    	<exclusion>
			    	<targetRef oid="b189fcb8-1ff9-11e5-8912-001e8c717e5b" type="RoleType"/> <!-- Thief -->
		    	</exclusion>
		    </policyConstraints>
		    <policyActions>
		    	<enforcement/>
		    </policyActions>
    	</policyRule>
    </assignment>    
    <inducement id="1111">
    	<construction>
    		<resourceRef oid="10000000-0000-0000-0000-000000000004" type="ResourceType"/>
    		<kind>account</kind>
    		<attribute>
                <ref>ri:title</ref>
                <outbound>
                	<expression>
						<value>Honorable Justice</value>
					</expression>
				</outbound>
            </attribute>
            <attribute>
                <ref>ri:drink</ref>
                <outbound>
                	<expression>
						<value>tea</value>
					</expression>
				</outbound>
            </attribute>
    	</construction>
    </inducement>
    <idempotence>conservative</idempotence>
    <authorization>
    	<action>http://midpoint.evolveum.com/xml/ns/test/authorization#punish</action>
    </authorization>
</role>
