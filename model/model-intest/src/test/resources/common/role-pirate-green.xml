<role oid="12345678-d34d-b33f-f00d-555555557777"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:t="http://prism.evolveum.com/xml/ns/public/types-3"
        xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3"
        xmlns:piracy="http://midpoint.evolveum.com/xml/ns/samples/piracy">
    <name>Pirate Green</name>
    <description>Scurvy Pirates</description>
    <inducement>

        <construction>
            <resourceRef oid="10000000-0000-0000-0000-000000000404" type="c:ResourceType"/>

            <attribute>
                <ref>ri:ship</ref>
                <outbound>
                    <expression>
                        <value>pirate</value>
                    </expression>
                </outbound>
            </attribute>

        </construction>
    </inducement>

    <requestable>true</requestable>
    <adminGuiConfiguration>
        <additionalMenuLink>
            <targetUrl>http://piracy.com/plunder</targetUrl>
            <label>Plunder</label>
        </additionalMenuLink>
        <userDashboardLink>
            <targetUrl>http://example.com/swashbuckle</targetUrl>
            <label>Swashbuckle</label>
        </userDashboardLink>
        <objectForms>
            <objectForm>
                <type>UserType</type>
                <formSpecification>
                    <panelClass>com.piracy.form.PirateUserPanel</panelClass>
                </formSpecification>
            </objectForm>
        </objectForms>
    </adminGuiConfiguration>
</role>
