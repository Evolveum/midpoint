        xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance/10000000-0000-0000-0000-000000000004">
    <name>Sailor</name>    
    <inducement id="1111">
    	<construction>
    		<resourceRef oid="10000000-0000-0000-0000-000000000004" type="ResourceType"/>
    		<kind>account</kind>
            <attribute>
                <ref>ri:drink</ref>
                <outbound>
                	<expression>
						<value>grog</value>
					</expression>
				</outbound>
            </attribute>
    	</construction>
    </inducement>
    
    <inducement>
    	<focusMappings>
    		<mapping>
    			<expression>
    				<value>CC-TITANIC</value>
    			</expression>
    			<target>
    				<path>costCenter</path>
    			</target>
    		</mapping>
    	</focusMappings>
    </inducement>
    <idempotence>conservative</idempotence>
    <authorization>
    	<action>http://midpoint.evolveum.com/xml/ns/test/authorization#sail</action>
    </authorization>
</role>
