    <audit>
        <eventRecording>
            <recordResourceStageChanges>false</recordResourceStageChanges>
            <recordResourceOids>true</recordResourceOids>
            <expression>
                <script>
                    <documentation>
                        Causes some TestAudit tests skip and/or modify audit record.
                    </documentation>
                    <code>
                        def deltas = auditRecord.deltas
                        def delta = deltas != null &amp;&amp; deltas.size() == 1 ? deltas[0] : null
                        def mods = delta?.objectDelta?.modifications
                        def mod = mods != null &amp;&amp; mods.size() >= 1 ? mods[0] : null
                        if (mod?.elementName?.lastName()?.localPart == "honorificSuffix") {
                            // here are various TestAudit.test4xx cases
                            def val = mods[0]?.anyRealValue?.orig
                            if (val == "drop-request-audit" &amp;&amp; auditRecord.eventStage?.name() == "REQUEST"
                                    || val == "drop-execution-audit" &amp;&amp; auditRecord.eventStage?.name() == "EXECUTION"
                                    || val == "drop-audit") {
                                return null // null skips audit
                            }
                            if (val == "change-parameter") {
                                auditRecord.parameter = "modified in script"
                            }
                        }
                        return auditRecord
                    </code>
                </script>
            </expression>
