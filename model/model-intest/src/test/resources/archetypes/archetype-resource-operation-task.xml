<archetype xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
           xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
           xmlns:mext="http://midpoint.evolveum.com/xml/ns/public/model/extension-3"
           oid="00000000-0000-0000-0000-000000000521" >
    <name>Resource related task</name>
    <superArchetypeRef oid="00000000-0000-0000-0000-000000000511" type="ArchetypeType"/>
    <archetypePolicy>
        <display>
            <icon>
                <color>green</color>
            </icon>
        </display>
        <itemConstraint>
            <c:path>extension</c:path>
            <visibility>vacant</visibility>
        </itemConstraint>
        <itemConstraint>
            <c:path >extension/mext:objectclass</c:path>
            <visibility>visible</visibility>
        </itemConstraint>
        <itemConstraint>
            <c:path>extension/mext:kind</c:path>
            <visibility>visible</visibility>
        </itemConstraint>
        <itemConstraint>
            <c:path>extension/mext:intent</c:path>
            <visibility>visible</visibility>
        </itemConstraint>
        <itemConstraint>
            <c:path>extension/mext:workerThreads</c:path>
            <visibility>visible</visibility>
        </itemConstraint>
        <itemConstraint>
            <c:path>extension/mext:dryRun</c:path>
            <visibility>visible</visibility>
        </itemConstraint>
        <adminGuiConfiguration>
            <objectDetails>
                <type>c:TaskType</type>
                <panel>
                    <identifier>basic</identifier>
                    <container>
                        <identifier>resourceOptions</identifier>
                        <display>
                            <label>resourceObjects</label>
                        </display>
                        <item>
                            <c:path>objectRef</c:path>
                        </item>
                        <item>
                            <c:path>extension/mext:objectclass</c:path>
                        </item>
                        <item>
                            <c:path>extension/mext:kind</c:path>
                        </item>
                        <item>
                            <c:path>extension/mext:intent</c:path>
                        </item>
                    </container>
                    <container>
                        <identifier>resourceOperationOptions</identifier>
                        <display>
                            <label>operationOptions</label>
                        </display>
                        <item>
                            <c:path>extension/mext:workerThreads</c:path>
                        </item>
                        <item>
                            <c:path>extension/mext:dryRun</c:path>
                        </item>
                    </container>
                </panel>
            </objectDetails>
        </adminGuiConfiguration>
    </archetypePolicy>
    <inducement>
        <focusMappings>
            <mapping>
                <strength>weak</strength>
                <expression>
                    <value>tight</value>
                </expression>
                <target>
                    <c:path>binding</c:path>
                </target>
            </mapping>
        </focusMappings>
    </inducement>
    <inducement>
        <focusMappings>
            <mapping>
                <strength>weak</strength>
                <expression>
                    <value>suspended</value>
                </expression>
                <target>
                    <c:path>executionState</c:path>
                </target>
            </mapping>
        </focusMappings>
    </inducement>
</archetype>
