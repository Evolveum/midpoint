<role xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
        oid="1ac00214-ffd0-49db-a1b9-51b46a0e9ae1">

    <name>meta role</name>
    <documentation>Creates a role assignment for the org. This metarole is assigned manually.</documentation>

    <inducement>
        <documentation>Creates an assignment to the role named `Role: NAME-Read` (the role is created on demand)</documentation>
        <focusMappings>
            <mapping>
                <name>Create new read role</name>
                <strength>strong</strength>
                <source>
                    <path>name</path>
                </source>
                <expression>
                    <assignmentTargetSearch>
                        <targetType>RoleType</targetType>
                        <filter>
                            <q:equal>
                                <q:path>name</q:path>
                                <expression>
                                    <script>
                                        <code>
                                            'Role: ' + name + '-Read'
                                        </code>
                                    </script>
                                </expression>
                            </q:equal>
                        </filter>
                        <createOnDemand>true</createOnDemand>
                        <populateObject>
                            <populateItem>
                                <expression>
                                    <script>
                                        <code>
                                            'Role: ' + name + '-Read'
                                        </code>
                                    </script>
                                </expression>
                                <target>
                                    <path>name</path>
                                </target>
                            </populateItem>
                        </populateObject>
                    </assignmentTargetSearch>
                </expression>
                <target>
                    <path>assignment</path>
                </target>
            </mapping>
        </focusMappings>
    </inducement>
</role>
