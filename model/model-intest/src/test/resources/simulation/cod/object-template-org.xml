<objectTemplate xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
        xmlns:pc="http://midpoint.evolveum.com/xml/ns/samples/preview-changes"
        oid="80d8bdb4-7288-41fe-a8a3-e39f1c9d2de3">

    <name>Org object template</name>

    <mapping>
        <documentation>Creates a name from identifier</documentation>
        <strength>weak</strength>
        <source>
            <path>identifier</path>
        </source>
        <expression>
            <script>
                <code>
                    "Org: " + identifier
                </code>
            </script>
        </expression>
        <target>
            <path>name</path>
        </target>
        <condition>
            <script>
                <code>
                    identifier != null
                </code>
            </script>
        </condition>
    </mapping>

    <mapping>
        <documentation>
            Assigns a parent org based on a path in `extension/pc:parentIdentifier` (create on demand, recursively).
        </documentation>
        <source>
            <path>extension/pc:parentIdentifier</path>
        </source>
        <source>
            <name>parentDescription</name>
            <path>description</path>
        </source>
        <target>
            <path>assignment</path>
        </target>
        <expression>
            <assignmentTargetSearch>
                <targetType>OrgType</targetType>
                <filter>
                    <q:equal>
                        <q:path>identifier</q:path>
                        <expression>
                            <script>
                                <code>
                                    parentIdentifier.split(':').last()
                                </code>
                            </script>
                        </expression>
                    </q:equal>
                </filter>
                <createOnDemand>true</createOnDemand>
                <populateObject>
                    <populateItem>
                        <expression>
                            <script>
                                <code>
                                    parentIdentifier.split(':').last()
                                </code>
                            </script>
                        </expression>
                        <target>
                            <path>identifier</path>
                        </target>
                    </populateItem>
                    <populateItem>
                        <expression>
                            <script>
                                <code>
                                    def index = parentIdentifier.lastIndexOf(":")
                                    if (index &lt; 0) {
                                        return null
                                    }
                                    parentIdentifier.substring(0, index)
                                </code>
                            </script>
                        </expression>
                        <target>
                            <path>extension/pc:parentIdentifier</path>
                        </target>
                    </populateItem>
                    <populateItem>
                        <expression>
                            <script>
                                <code>
                                    parentDescription
                                </code>
                            </script>
                        </expression>
                        <target>
                            <path>description</path>
                        </target>
                    </populateItem>
                </populateObject>
            </assignmentTargetSearch>
        </expression>
        <condition>
            <script>
                <code>
                    parentIdentifier != null
                </code>
            </script>
        </condition>

    </mapping>

    <mapping>
        <documentation>Creates a description from identifier</documentation>
        <strength>weak</strength>
        <source>
            <path>identifier</path>
        </source>
        <expression>
            <script>
                <code>
                    "Description " + identifier
                </code>
            </script>
        </expression>
        <target>
            <path>description</path>
        </target>
    </mapping>

    <mapping>
        <documentation>Assigns a metarole</documentation>
        <source>
            <path>description</path>
        </source>
        <expression>
            <assignmentTargetSearch>
                <targetType>RoleType</targetType>
                <oid>3d82a1af-0380-4368-b80a-b28a8c87b5bb</oid> <!-- metarole for orgs -->
            </assignmentTargetSearch>
        </expression>
        <target>
            <path>assignment</path>
        </target>
        <condition>
            <script>
                <code>description != 'no-projection'</code>
            </script>
        </condition>
    </mapping>
</objectTemplate>
