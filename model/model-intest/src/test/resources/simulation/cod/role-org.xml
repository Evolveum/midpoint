<role xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
        xmlns:icfs="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/resource-schema-3"
        xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        oid="3d82a1af-0380-4368-b80a-b28a8c87b5bb">

    <name>metarole for orgs</name>
    <documentation>
        Creates group (for the org) and memberships (for the org members) - but only if "no-provisioning" flag is not set.
        This metarole is assigned automatically by the template.
    </documentation>

    <inducement>
        <description>creates group for the org</description>
        <construction>
            <resourceRef oid="8dfeccc9-e144-4864-a692-e483f4b1873a"/>
            <kind>entitlement</kind>
            <intent>group</intent>

            <association>
                <ref>ri:group</ref>
                <outbound>
                    <name>group association for org</name>
                    <source>
                        <path>$immediateRole/extension/parentIdentifier</path>
                    </source>
                    <expression>
                        <associationTargetSearch>
                            <filter>
                                <q:equal>
                                    <q:path>attributes/name</q:path>
                                    <expression>
                                        <script>
                                            <code>
                                                "Org: " + parentIdentifier.split(':').last()
                                            </code>
                                        </script>
                                    </expression>
                                </q:equal>
                            </filter>
                            <searchStrategy>onResourceIfNeeded</searchStrategy>
                            <createOnDemand>true</createOnDemand>
                            <populateObject>
                                <populateItem>
                                    <expression>
                                        <value oid="8dfeccc9-e144-4864-a692-e483f4b1873a" type="ResourceType"/>
                                    </expression>
                                    <target>
                                        <path>resourceRef</path>
                                    </target>
                                </populateItem>
                                <populateItem>
                                    <expression>
                                        <value>entitlement</value>
                                    </expression>
                                    <target>
                                        <path>kind</path>
                                    </target>
                                </populateItem>
                                <populateItem>
                                    <expression>
                                        <value>group</value>
                                    </expression>
                                    <target>
                                        <path>intent</path>
                                    </target>
                                </populateItem>
                                <populateItem>
                                    <expression>
                                        <value xsi:type="xsd:QName">ri:GroupObjectClass</value>
                                    </expression>
                                    <target>
                                        <path>objectClass</path>
                                    </target>
                                </populateItem>
                                <populateItem>
                                    <expression>
                                        <script>
                                            <code>
                                                "Org: " + parentIdentifier.split(':').last()
                                            </code>
                                        </script>
                                    </expression>
                                    <target>
                                        <path>attributes/icfs:name</path>
                                    </target>
                                </populateItem>
                            </populateObject>
                        </associationTargetSearch>
                    </expression>
                    <condition>
                        <script>
                            <code>
                                parentIdentifier != null
                            </code>
                        </script>
                    </condition>
                </outbound>
            </association>
        </construction>
        <condition>
            <source>
                <path>$immediateRole/description</path>
            </source>
            <expression>
                <script>
                    <code>
                        description != "no-provisioning"
                    </code>
                </script>
            </expression>
        </condition>
    </inducement>

    <inducement>
        <description>creates account with group membership for user that has the org assigned</description>
        <construction>
            <resourceRef oid="8dfeccc9-e144-4864-a692-e483f4b1873a"/>
            <kind>account</kind>
            <intent>default</intent>
            <association>
                <ref>ri:group</ref>
                <outbound>
                    <name>group association for user</name>
                    <expression>
                        <associationTargetSearch>
                            <filter>
                                <q:equal>
                                    <q:path>attributes/icfs:name</q:path>
                                    <expression>
                                        <path>$immediateRole/name</path>
                                    </expression>
                                </q:equal>
                            </filter>
                            <searchStrategy>onResourceIfNeeded</searchStrategy>
                            <createOnDemand>true</createOnDemand>
                            <populateObject>
                                <populateItem>
                                    <expression>
                                        <value oid="8dfeccc9-e144-4864-a692-e483f4b1873a" type="ResourceType"/>
                                    </expression>
                                    <target>
                                        <path>resourceRef</path>
                                    </target>
                                </populateItem>
                                <populateItem>
                                    <expression>
                                        <value>entitlement</value>
                                    </expression>
                                    <target>
                                        <path>kind</path>
                                    </target>
                                </populateItem>
                                <populateItem>
                                    <expression>
                                        <value>group</value>
                                    </expression>
                                    <target>
                                        <path>intent</path>
                                    </target>
                                </populateItem>
                                <populateItem>
                                    <expression>
                                        <value xsi:type="xsd:QName">ri:GroupObjectClass</value>
                                    </expression>
                                    <target>
                                        <path>objectClass</path>
                                    </target>
                                </populateItem>
                                <populateItem>
                                    <expression>
                                        <path>$immediateRole/name</path>
                                    </expression>
                                    <target>
                                        <path>attributes/icfs:name</path>
                                    </target>
                                </populateItem>
                            </populateObject>
                        </associationTargetSearch>
                    </expression>
                </outbound>
            </association>
        </construction>
        <order>2</order>
        <condition>
            <source>
                <path>$immediateRole/description</path>
            </source>
            <expression>
                <script>
                    <code>
                        description != "no-provisioning"
                    </code>
                </script>
            </expression>
        </condition>
    </inducement>
</role>
