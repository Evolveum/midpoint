<role xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
        oid="0eb28c12-b0d0-11f0-80ac-933cebd439a5">
    <name>safe-auto-good-path</name>
    <documentation>
        Auto-assigned role that contains only "correct" mappings w.r.t. `safe` expression profile.
        Also includes path in the filter.
        Path is a safe evaluator, everything should go fine.
    </documentation>
    <assignment>
        <targetRef oid="2a68ff58-b009-11f0-9b5e-236da66bcdb4" type="ArchetypeType"/>
    </assignment>
    <autoassign>
        <enabled>true</enabled>
        <focus>
            <mapping id="333">
                <condition>
                    <filter>
                        <filter>
                            <q:text>costCenter = $focus/organization</q:text>
                        </filter>
                    </filter>
                </condition>
            </mapping>
            <selector>
                <type>UserType</type>
            </selector>
        </focus>
    </autoassign>
</role>
