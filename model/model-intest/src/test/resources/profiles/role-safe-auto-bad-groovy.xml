<role xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
        oid="19dd7966-b013-11f0-8b8b-470dc5f10d86">
    <name>safe-auto-bad-groovy</name>
    <documentation>
        Auto-assigned role that contains groovy script, which is not allowed by `safe` expression profile.
    </documentation>
    <assignment>
        <targetRef oid="2a68ff58-b009-11f0-9b5e-236da66bcdb4" type="ArchetypeType"/>
    </assignment>
    <autoassign>
        <enabled>true</enabled>
        <focus>
            <mapping id="333">
                <condition>
                    <script>
                        <code>
                            costCenter == 'safe'
                        </code>
                    </script>
                </condition>
            </mapping>
            <selector>
                <type>UserType</type>
            </selector>
        </focus>
    </autoassign>
</role>
