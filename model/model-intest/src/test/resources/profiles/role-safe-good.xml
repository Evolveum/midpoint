<role xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3"
        oid="b14670c8-b009-11f0-b4a4-4bed7dcbb685">
    <name>safe-good</name>
    <documentation>Role that contains only "correct" mappings w.r.t. `safe` expression profile.</documentation>
    <assignment>
        <targetRef oid="2a68ff58-b009-11f0-9b5e-236da66bcdb4" type="ArchetypeType"/>
    </assignment>
    <inducement>
        <focusMappings>
            <mapping>
                <strength>strong</strength>
                <source>
                    <path>name</path>
                </source>
                <expression>
                    <path>$name</path>
                </expression>
                <target>
                    <path>description</path>
                </target>
            </mapping>
        </focusMappings>
    </inducement>
    <inducement>
        <construction>
            <resourceRef oid="2003a0c3-62a3-413d-9941-6fecaef84a16"/>
            <attribute>
                <ref>ri:fullname</ref>
                <outbound>
                    <expression>
                        <value>I-am-safe</value>
                    </expression>
                </outbound>
            </attribute>
        </construction>
    </inducement>
</role>
