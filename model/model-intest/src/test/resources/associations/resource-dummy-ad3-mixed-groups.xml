<resource oid="4459d18e-fa47-46a4-8e68-1f5c4fa859be"
          xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
          xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
          xmlns:icfs="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/resource-schema-3"
          xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">
    <name>ad3-mixed-groups</name>
    <documentation>AD #3: Groups here consists of both accounts and (other) groups. Primarily for MID-10271.</documentation>
    <connectorRef type="ConnectorType">
        <filter>
            <q:and>
                <q:equal>
                    <q:path>connectorType</q:path>
                    <q:value>com.evolveum.icf.dummy.connector.DummyConnector</q:value>
                </q:equal>
                <q:equal>
                    <q:path>connectorVersion</q:path>
                    <q:value>2.0</q:value>
                </q:equal>
            </q:and>
        </filter>
    </connectorRef>
    <connectorConfiguration xmlns:icfi="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/bundle/com.evolveum.icf.dummy/com.evolveum.icf.dummy.connector.DummyConnector"
                   xmlns:icfc="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/connector-schema-3">
        <icfc:configurationProperties>
            <icfi:instanceId>ad3-mixed-groups</icfi:instanceId>
            <icfi:useLegacySchema>false</icfi:useLegacySchema>
        </icfc:configurationProperties>
    </connectorConfiguration>
    <schemaHandling>
        <objectType>
            <kind>account</kind>
            <intent>default</intent>
            <delineation>
                <objectClass>ri:account</objectClass>
            </delineation>
            <focus>
                <type>UserType</type>
            </focus>
            <attribute>
                <ref>icfs:name</ref>
                <correlator/>
                <outbound>
                    <strength>strong</strength>
                    <source>
                        <path>name</path>
                    </source>
                </outbound>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>name</path>
                    </target>
                    <use>correlation</use>
                </inbound>
            </attribute>
            <synchronization>
                <reaction>
                    <situation>unlinked</situation>
                    <actions>
                        <link/>
                    </actions>
                </reaction>
                <reaction>
                    <situation>linked</situation>
                    <situation>deleted</situation>
                    <actions>
                        <synchronize/>
                    </actions>
                </reaction>
            </synchronization>
        </objectType>
        <objectType>
            <kind>entitlement</kind>
            <intent>group-type-A</intent>
            <delineation>
                <objectClass>ri:group</objectClass>
                <filter>
                    <q:text>attributes/ri:type = 'group-type-A'</q:text>
                </filter>
            </delineation>
            <focus>
                <type>RoleType</type>
                <archetypeRef oid="0083a248-a8fb-42f1-81bb-a14a4e8bf63e"/>
            </focus>
            <attribute>
                <ref>icfs:name</ref>
                <correlator/>
                <outbound>
                    <strength>strong</strength>
                    <source>
                        <path>name</path>
                    </source>
                </outbound>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>name</path>
                    </target>
                    <use>correlation</use>
                </inbound>
            </attribute>
            <synchronization>
                <reaction>
                    <situation>unlinked</situation>
                    <actions>
                        <link/>
                    </actions>
                </reaction>
                <reaction>
                    <situation>linked</situation>
                    <situation>deleted</situation>
                    <actions>
                        <synchronize/>
                    </actions>
                </reaction>
            </synchronization>
        </objectType>
        <objectType>
            <kind>entitlement</kind>
            <intent>group-type-B</intent>
            <delineation>
                <objectClass>ri:group</objectClass>
                <filter>
                    <q:text>attributes/ri:type = 'group-type-B'</q:text>
                </filter>
            </delineation>
            <focus>
                <type>RoleType</type>
                <archetypeRef oid="bd379f28-52b3-451d-8a3c-1a5c834d334f"/>
            </focus>
            <attribute>
                <ref>icfs:name</ref>
                <correlator/>
                <outbound>
                    <strength>strong</strength>
                    <source>
                        <path>name</path>
                    </source>
                </outbound>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>name</path>
                    </target>
                    <use>correlation</use>
                </inbound>
            </attribute>
            <synchronization>
                <reaction>
                    <situation>unlinked</situation>
                    <actions>
                        <link/>
                    </actions>
                </reaction>
                <reaction>
                    <situation>linked</situation>
                    <situation>deleted</situation>
                    <actions>
                        <synchronize/>
                    </actions>
                </reaction>
            </synchronization>
        </objectType>
        <associationType>
            <name>ri:group</name>
            <subject>
                <objectType>
                    <kind>account</kind>
                    <intent>default</intent>
                </objectType>
                <objectType>
                    <kind>entitlement</kind>
                    <intent>group-type-A</intent>
                </objectType>
                <objectType>
                    <kind>entitlement</kind>
                    <intent>group-type-B</intent>
                </objectType>
                <association>
                    <ref>ri:group</ref>
                    <outbound>
                        <name>group-outbound</name>
                        <expression>
                            <associationConstruction>
                                <objectRef>
                                    <mapping>
                                        <expression>
                                            <associationTargetSearch>
                                                <filter>
                                                    <q:equal>
                                                        <q:path>attributes/icfs:name</q:path>
                                                        <expression>
                                                            <script>
                                                                <code>assignmentPath[assignmentPath.size() - 1].target.name</code>
                                                            </script>
                                                        </expression>
                                                    </q:equal>
                                                </filter>
                                            </associationTargetSearch>
                                        </expression>
                                    </mapping>
                                </objectRef>
                            </associationConstruction>
                        </expression>
                    </outbound>
                    <tolerant>true</tolerant>
                </association>
            </subject>
            <object>
                <objectType>
                    <kind>entitlement</kind>
                    <intent>group-type-A</intent>
                </objectType>
                <objectType>
                    <kind>entitlement</kind>
                    <intent>group-type-B</intent>
                </objectType>
            </object>
        </associationType>
    </schemaHandling>
</resource>
