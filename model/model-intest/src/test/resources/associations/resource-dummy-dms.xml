<resource oid="d77da617-ee78-46f7-8a15-cde88193308d"
          xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
          xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
          xmlns:icfs="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/resource-schema-3"
          xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3"
          xmlns:assoc="http://midpoint.evolveum.com/xml/ns/samples/associations">
    <name>dms</name>
    <connectorRef type="ConnectorType">
        <filter>
            <q:and>
                <q:equal>
                    <q:path>connectorType</q:path>
                    <q:value>com.evolveum.icf.dummy.connector.DummyConnector</q:value>
                </q:equal>
                <q:equal>
                    <q:path>connectorVersion</q:path>
                    <q:value>2.0</q:value>
                </q:equal>
            </q:and>
        </filter>
    </connectorRef>
    <connectorConfiguration xmlns:icfi="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/bundle/com.evolveum.icf.dummy/com.evolveum.icf.dummy.connector.DummyConnector"
                   xmlns:icfc="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/connector-schema-3">
        <icfc:configurationProperties>
            <icfi:instanceId>dms</icfi:instanceId>
        </icfc:configurationProperties>
    </connectorConfiguration>
    <schemaHandling>
        <objectType>
            <kind>account</kind>
            <intent>default</intent>
            <delineation>
                <objectClass>ri:AccountObjectClass</objectClass>
            </delineation>
            <focus>
                <type>UserType</type>
            </focus>
            <attribute>
                <ref>icfs:name</ref>
                <correlator/>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>name</path>
                    </target>
                </inbound>
                <outbound>
                    <strength>strong</strength>
                    <source>
                        <path>name</path>
                    </source>
                </outbound>
            </attribute>
            <synchronization>
                <reaction>
                    <situation>unmatched</situation>
                    <actions>
                        <addFocus/>
                    </actions>
                </reaction>
                <reaction>
                    <situation>unlinked</situation>
                    <actions>
                        <link/>
                    </actions>
                </reaction>
            </synchronization>
        </objectType>
        <objectType>
            <kind>generic</kind>
            <intent>document</intent>
            <documentation>Document to which user is granted access.</documentation>
            <delineation>
                <objectClass>ri:CustomdocumentObjectClass</objectClass>
            </delineation>
            <focus>
                <type>ServiceType</type>
                <archetypeRef oid="ce92f877-9f22-44cf-9ef1-f55675760eb0"/>
            </focus>
            <attribute>
                <ref>icfs:name</ref>
                <correlator/>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>name</path>
                    </target>
                </inbound>
            </attribute>
            <synchronization>
                <reaction>
                    <situation>unmatched</situation>
                    <actions>
                        <addFocus/>
                    </actions>
                </reaction>
                <reaction>
                    <situation>unlinked</situation>
                    <actions>
                        <link/>
                    </actions>
                </reaction>
            </synchronization>
        </objectType>
        <associationTypeNew>
            <name>userDocumentAccess</name>
            <subject>
                <objectType>
                    <kind>account</kind>
                    <intent>default</intent>
                </objectType>
                <item>ri:access</item>
            </subject>
            <focus>
                <subtype>documentAccess</subtype>
            </focus>
            <attribute>
                <ref>ri:level</ref>
                <outbound>
                    <source>
                        <path>targetRef</path>
                    </source>
                    <expression>
                        <script>
                            <code>targetRef?.relation?.localPart</code>
                        </script>
                    </expression>
                </outbound>
            </attribute>
            <association>
                <ref>ri:document</ref>
                <outbound>
                    <expression>
                        <associationFromLink/>
                    </expression>
                </outbound>
                <inbound> <!-- not strictly necessary, just for illustration -->
                    <source>
                        <path>$shadow/attributes/ri:level</path>
                    </source>
                    <source>
                        <name>documentName</name>
                        <path>$associatedShadow/attributes/icfs:name</path>
                    </source>
                    <expression>
                        <script>
                            <code>"$documentName:$level"</code>
                        </script>
                    </expression>
                    <target>
                        <path>identifier</path>
                    </target>
                </inbound>
                <inbound>
                    <source>
                        <path>$shadow/attributes/ri:level</path>
                    </source>
                    <expression> <!-- The relation will not be set here -->
                        <referenceSearch>
                            <targetType>ServiceType</targetType>
                            <filter>
                                <q:text>linkRef = `input.shadowRef`</q:text>
                            </filter>
                        </referenceSearch>
                        <!--<referencedShadowOwner> &lt;!&ndash; TODO &ndash;&gt;-->
                        <!--    <relation>-->
                        <!--        <expression>-->
                        <!--            <path>$level</path>-->
                        <!--        </expression>-->
                        <!--    </relation>-->
                        <!--</referencedShadowOwner>-->
                    </expression>
                    <target>
                        <path>targetRef</path>
                    </target>
                </inbound>
            </association>
            <correlation>
                <correlators>
                    <items>
                        <item>
                            <ref>targetRef</ref>
                        </item>
                    </items>
                </correlators>
            </correlation>
            <synchronization>
                <reaction>
                    <situation>disputed</situation> <!-- TODO "noTarget" or something like that -->
                    <actions>
                        <!-- none at this moment -->
                    </actions>
                </reaction>
                <reaction>
                    <situation>unmatched</situation>
                    <actions>
                        <addFocus/>
                    </actions>
                </reaction>
                <reaction>
                    <situation>linked</situation>
                    <actions>
                        <synchronize/>
                    </actions>
                </reaction>
            </synchronization>
        </associationTypeNew>
    </schemaHandling>
</resource>
