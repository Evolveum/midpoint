<role oid="a2bc45fc-bfec-11e7-bdfd-af4b3e689502"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:t="http://prism.evolveum.com/xml/ns/public/types-3"
        xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
        xmlns:piracy="http://midpoint.evolveum.com/xml/ns/samples/piracy">
    <name>Unit Walker</name>
    <inducement>
        <construction xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">
            <resourceRef oid="10000000-0000-0000-0000-000000000004" type="c:ResourceType"/>
            <kind>account</kind>
            <attribute>
                <ref>ri:title</ref>
                <outbound>
                    <expression>
                        <value>Walker</value>
                    </expression>
                </outbound>
            </attribute>
        </construction>
    </inducement>
    <autoassign>
        <enabled>true</enabled>
        <focus>
            <selector>
                <type>UserType</type>
            </selector>
            <mapping>
                <name>autoassign-walker</name>
                <source>
                    <path>organizationalUnit</path>
                </source>
                <condition>
                    <!-- Test for filter expressions (#10060) -->
                    <filter>
                        <filter>
                            <q:text>organizationalUnit = 'walker'</q:text>
                        </filter>
                    </filter>
                </condition>
            </mapping>
        </focus>
    </autoassign>
</role>
