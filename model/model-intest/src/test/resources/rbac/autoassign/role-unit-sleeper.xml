<role oid="660f0fb8-bfec-11e7-bb16-07154f1e53a6"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:t="http://prism.evolveum.com/xml/ns/public/types-3"
        xmlns:piracy="http://midpoint.evolveum.com/xml/ns/samples/piracy">
    <name>Unit Sleeper</name>
    <inducement>
        <construction xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">
            <resourceRef oid="10000000-0000-0000-0000-000000000004" type="c:ResourceType"/>
            <kind>account</kind>
            <attribute>
                <ref>ri:title</ref>
                <outbound>
                    <expression>
                        <value>Sleeper</value>
                    </expression>
                </outbound>
            </attribute>
        </construction>
    </inducement>
    <autoassign>
        <enabled>true</enabled>
        <focus>
            <selector>
                <type>UserType</type>
            </selector>
            <mapping>
                <name>autoassign-sleeper</name>
                <source>
                    <path>organizationalUnit</path>
                </source>
                <condition>
                    <!-- Testing Groovy expressions in autoassign -->
                    <script>
                        <code>basic.stringify(organizationalUnit) == 'sleeper'</code>
                    </script>
                </condition>
                <populate>
                    <populateItem>
                        <expression>
                            <value>2222-01-02T03:04:05.000Z</value>
                        </expression>
                        <target>
                            <path>activation/validTo</path>
                        </target>
                    </populateItem>
                </populate>
            </mapping>
        </focus>
    </autoassign>
</role>
