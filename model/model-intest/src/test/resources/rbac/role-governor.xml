<role oid="12345678-d34d-b33f-f00d-555555557705"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:t="http://prism.evolveum.com/xml/ns/public/types-3"
        xmlns:piracy="http://midpoint.evolveum.com/xml/ns/samples/piracy">
    <name>Governor</name>
    <assignment>
        <policyRule>
            <name>max1</name>
            <policyConstraints>
                <maxAssignees>
                    <multiplicity>1</multiplicity>
                </maxAssignees>
            </policyConstraints>
            <policyActions>
                <enforcement/>
            </policyActions>
        </policyRule>
    </assignment>
    <assignment>
        <policyRule>
            <name>no-approvers</name>
            <policyConstraints>
                <maxAssignees>
                    <multiplicity>0</multiplicity>
                    <relation>approver</relation>
                </maxAssignees>
            </policyConstraints>
            <policyActions>
                <enforcement/>
            </policyActions>
        </policyRule>
    </assignment>
    <inducement id="1111">
        <construction id="60004" xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance/10000000-0000-0000-0000-000000000004">
            <resourceRef oid="10000000-0000-0000-0000-000000000004" type="c:ResourceType"/>
            <kind>account</kind>
            <attribute>
                <ref>ri:title</ref>
                <outbound>
                    <source>
                        <path>$assignment/orgRef</path>
                    </source>
                    <source>
                        <path>$assignment/tenantRef</path>
                    </source>
                    <expression>
                        <script>
                            <code>
                                import com.evolveum.midpoint.xml.ns._public.common.common_3.OrgType;

                                if (tenantRef != null) {
                                    def tenant = midpoint.getObject(OrgType.class, tenantRef.getOid())
                                    return 'Her Excellency Governor of ' + tenant.getDisplayName()
                                } else {
                                    return 'Her Excellency Governor'
                                }
                            </code>
                        </script>
                    </expression>
                </outbound>
            </attribute>
        </construction>
    </inducement>
</role>
