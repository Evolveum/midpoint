<role oid="12345678-d34d-b33f-f00d-555555557706"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:t="http://prism.evolveum.com/xml/ns/public/types-3"
        xmlns:piracy="http://midpoint.evolveum.com/xml/ns/samples/piracy">
    <name>Cannibal</name>
    <assignment>
        <policyRule>
            <name>cannibals must live</name>
            <policyConstraints>
                <or>    <!-- will fire when any of these limits are triggered -->
                    <minAssignees>
                        <multiplicity>2</multiplicity>
                    </minAssignees>
                    <minAssignees>
                        <multiplicity>1</multiplicity>
                        <relation>owner</relation>
                    </minAssignees>
                    <maxAssignees>
                        <multiplicity>3</multiplicity>
                    </maxAssignees>
                </or>
            </policyConstraints>
            <policyActions>
                <enforcement/>
            </policyActions>
        </policyRule>
    </assignment>
    <inducement id="1111">
        <construction id="60004" xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">
            <resourceRef oid="10000000-0000-0000-0000-000000000004" type="c:ResourceType"/>
            <kind>account</kind>
            <attribute>
                <ref>ri:title</ref>
                <outbound>
                    <expression>
                        <value>Voracious Cannibal</value>
                    </expression>
                </outbound>
            </attribute>
        </construction>
    </inducement>
</role>
