<systemConfiguration
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3">

    <globalPolicyRule>
        <name>Repeated recompute policy</name>
        <policyConstraints>
            <modification>
                <item>credentials</item>
                <presentation>
                    <hidden>true</hidden>
                </presentation>
            </modification>
        </policyConstraints>
        <policyActions>
            <scriptExecution>
                <privileges>
                    <runPrivileged>true</runPrivileged>
                </privileges>
                <executeScript>
                    <recompute/>
                </executeScript>
            </scriptExecution>
        </policyActions>
        <focusSelector>
            <type>UserType</type>
        </focusSelector>
    </globalPolicyRule>
</systemConfiguration>
