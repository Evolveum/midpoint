                <exclusion>
                    <targetRef oid="0c3b2e44-9387-4c7b-8262-a20fdea434ea" type="RoleType"/> <!-- Silver -->
                </exclusion>
            </policyConstraints>
            <policyActions>
                <enforcement/>
