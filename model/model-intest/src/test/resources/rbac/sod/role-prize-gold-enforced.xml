        </policyRule>
    </assignment>
    <assignment>
        <policyRule>
            <name>prize exclusion: gold-bronze</name>
            <policyConstraints>
                <exclusion>
                    <targetRef oid="702dc3c9-9755-4880-b132-cf82d5845dd9" type="RoleType"/> <!-- Bronze -->
                </exclusion>
            </policyConstraints>
            <policyActions>
                <enforcement/>
            </policyActions>
        </policyRule>
    </assignment>
    <inducement>
        <construction>
            <resourceRef oid="10000000-0000-0000-0000-000000000004" type="ResourceType"/>
            <kind>account</kind>
            <attribute>
                <ref>ri:ship</ref>
                <outbound>
                    <expression>
                        <value>Gold</value>
                    </expression>
                </outbound>
            </attribute>
        </construction>
    </inducement>
</role>
