<objectTemplate xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
                oid="00301846-fe73-476a-83be-6bfe13251b4a">
    <name>template-creation-metadata-recording</name>

    <mapping>
        <strength>strong</strength>
        <source>
            <path>givenName</path>
        </source>
        <source>
            <path>familyName</path>
        </source>
        <expression>
            <script>
                <code>givenName + ' ' + familyName</code>
            </script>
        </expression>
        <target>
            <path>fullName</path>
        </target>
    </mapping>

    <mapping>
        <strength>strong</strength>
        <expression>
            <value>Bratislava</value>
        </expression>
        <target>
            <path>locality</path>
        </target>
    </mapping>

    <!-- metadata should not be provided here -->
    <mapping>
        <strength>strong</strength>
        <source>
            <path>givenName</path>
        </source>
        <expression>
            <script>
                <code>givenName</code>
            </script>
        </expression>
        <target>
            <path>description</path>
        </target>
    </mapping>

    <meta>
        <item>
            <ref>storage/createTimestamp</ref>
            <limitations>
                <processing>full</processing>
            </limitations>
        </item>
        <applicability>
            <include>
                <path>fullName</path>
            </include>
            <include>
                <path>locality</path>
            </include>
        </applicability>
    </meta>
</objectTemplate>
