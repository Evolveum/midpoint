<resource oid="0493f2f6-a22f-4259-ac04-4797eabb7d32"
          xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
          xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
          xmlns:icfs="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/resource-schema-3"
          xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3"
          xmlns:hr="http://midpoint.evolveum.com/xml/ns/samples/hr">
    <name>hr</name>
    <connectorRef type="ConnectorType">
        <filter>
            <q:and>
                <q:equal>
                    <q:path>connectorType</q:path>
                    <q:value>com.evolveum.icf.dummy.connector.DummyConnector</q:value>
                </q:equal>
                <q:equal>
                    <q:path>connectorVersion</q:path>
                    <q:value>2.0</q:value>
                </q:equal>
            </q:and>
        </filter>
    </connectorRef>
    <connectorConfiguration xmlns:icfi="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/bundle/com.evolveum.icf.dummy/com.evolveum.icf.dummy.connector.DummyConnector"
                   xmlns:icfc="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/connector-schema-3">
        <icfc:configurationProperties>
            <icfi:instanceId>hr</icfi:instanceId>
            <icfi:useLegacySchema>false</icfi:useLegacySchema>
        </icfc:configurationProperties>
    </connectorConfiguration>
    <schemaHandling>
        <objectType>
            <kind>account</kind>
            <intent>person-new</intent>
            <delineation>
                <objectClass>ri:person</objectClass>
            </delineation>
            <focus>
                <type>UserType</type>
            </focus>
            <attribute>
                <ref>icfs:name</ref>
                <correlator/>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>name</path>
                    </target>
                </inbound>
            </attribute>
            <synchronization>
                <reaction>
                    <situation>unmatched</situation>
                    <actions>
                        <addFocus/>
                    </actions>
                </reaction>
                <reaction>
                    <situation>unlinked</situation>
                    <actions>
                        <link/>
                    </actions>
                </reaction>
                <reaction>
                    <situation>linked</situation>
                    <situation>deleted</situation>
                    <actions>
                        <synchronize/>
                    </actions>
                </reaction>
            </synchronization>
        </objectType>
        <objectType>
            <kind>generic</kind>
            <intent>org</intent>
            <delineation>
                <objectClass>ri:orgUnit</objectClass>
            </delineation>
            <focus>
                <type>OrgType</type>
            </focus>
            <attribute>
                <ref>icfs:name</ref>
                <correlator/>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>name</path>
                    </target>
                </inbound>
            </attribute>
            <synchronization>
                <reaction>
                    <situation>unmatched</situation>
                    <actions>
                        <addFocus/>
                    </actions>
                </reaction>
                <reaction>
                    <situation>unlinked</situation>
                    <actions>
                        <link/>
                    </actions>
                </reaction>
                <reaction>
                    <situation>linked</situation>
                    <situation>deleted</situation>
                    <actions>
                        <synchronize/>
                    </actions>
                </reaction>
            </synchronization>
        </objectType>
        <objectType>
            <kind>generic</kind>
            <intent>costCenter</intent>
            <delineation>
                <objectClass>ri:costCenter</objectClass>
            </delineation>
            <focus>
                <type>OrgType</type>
            </focus>
            <attribute>
                <ref>icfs:name</ref>
                <correlator/>
                <inbound>
                    <strength>strong</strength>
                    <target>
                        <path>name</path>
                    </target>
                </inbound>
            </attribute>
            <synchronization>
                <reaction>
                    <situation>unmatched</situation>
                    <actions>
                        <addFocus/>
                    </actions>
                </reaction>
                <reaction>
                    <situation>unlinked</situation>
                    <actions>
                        <link/>
                    </actions>
                </reaction>
                <reaction>
                    <situation>linked</situation>
                    <situation>deleted</situation>
                    <actions>
                        <synchronize/>
                    </actions>
                </reaction>
            </synchronization>
        </objectType>
        <associationType>
            <name>contracts-new</name>
            <subject>
                <objectType>
                    <kind>account</kind>
                    <intent>person-new</intent>
                </objectType>
                <association>
                    <ref>ri:contract</ref>
                    <inbound>
                        <name>contracts-inbound</name>
                        <expression>
                            <associationSynchronization>
                                <attribute>
                                    <ref>icfs:uid</ref>
                                    <correlator/>
                                    <mapping>
                                        <strength>strong</strength>
                                        <expression>
                                            <script>
                                                <code>"contract:$input"</code>
                                            </script>
                                        </expression>
                                        <target>
                                            <path>identifier</path>
                                        </target>
                                    </mapping>
                                </attribute>
                                <attribute>
                                    <ref>ri:note</ref>
                                    <mapping>
                                        <strength>strong</strength>
                                        <target>
                                            <path>description</path>
                                        </target>
                                    </mapping>
                                </attribute>
                                <attribute>
                                    <ref>ri:responsibility</ref>
                                    <mapping>
                                        <strength>strong</strength>
                                        <name>responsibilities-inbound</name>
                                        <target>
                                            <path>extension/hr:responsibility</path>
                                            <set>
                                                <predefined>matchingProvenance</predefined>
                                                <additionalMappingSpecification>
                                                    <definitionObjectRef oid="0493f2f6-a22f-4259-ac04-4797eabb7d32" type="ResourceType"/>
                                                    <objectType>
                                                        <kind>account</kind>
                                                        <intent>person</intent>
                                                    </objectType>
                                                    <associationType>ri:contracts</associationType>
                                                    <mappingName>responsibilities-inbound</mappingName>
                                                </additionalMappingSpecification>
                                            </set>
                                        </target>
                                    </mapping>
                                </attribute>
                                <objectRef>
                                    <ref>ri:org</ref>
                                    <mapping>
                                        <strength>strong</strength>
                                        <expression>
                                            <shadowOwnerReferenceSearch/>
                                        </expression>
                                        <target>
                                            <path>targetRef</path>
                                        </target>
                                    </mapping>
                                </objectRef>
                                <objectRef>
                                    <ref>ri:costCenter</ref>
                                    <mapping>
                                        <strength>strong</strength>
                                        <expression>
                                            <path>$object/attributes/icfs:name</path>
                                        </expression>
                                        <target>
                                            <path>extension/hr:costCenter</path>
                                        </target>
                                    </mapping>
                                    <mapping>
                                        <strength>strong</strength>
                                        <expression>
                                            <shadowOwnerReferenceSearch/>
                                        </expression>
                                        <target>
                                            <path>orgRef</path>
                                        </target>
                                    </mapping>
                                </objectRef>
                                <synchronization>
                                    <reaction>
                                        <situation>unmatched</situation>
                                        <actions>
                                            <addFocusValue/>
                                        </actions>
                                    </reaction>
                                    <reaction>
                                        <situation>matched</situation>
                                        <actions>
                                            <synchronize/>
                                        </actions>
                                    </reaction>
                                </synchronization>
                            </associationSynchronization>
                        </expression>
                        <target>
                            <set>
                                <!-- Note that this is not automatically applied, see also MID-10084. -->
                                <additionalMappingSpecification>
                                    <definitionObjectRef oid="0493f2f6-a22f-4259-ac04-4797eabb7d32" type="ResourceType"/>
                                    <objectType>
                                        <kind>account</kind>
                                        <intent>person</intent>
                                    </objectType>
                                    <associationType>ri:contracts</associationType>
                                    <mappingName>contracts-inbound</mappingName>
                                </additionalMappingSpecification>
                            </set>
                        </target>
                    </inbound>
                </association>
            </subject>
        </associationType>
    </schemaHandling>
</resource>
