    <globalPolicyRule>
        <name>non-createable-role</name>
        <policyConstraints>
            <modification>
                <operation>add</operation>
            </modification>
        </policyConstraints>
        <policyActions>
            <enforcement/>
        </policyActions>
        <focusSelector>
            <type>RoleType</type>
            <filter>
                <q:equal>
                    <q:path>description</q:path>
                    <q:value>Thou shalt not create this role!</q:value>
                </q:equal>
            </filter>
        </focusSelector>
    </globalPolicyRule>
    <globalPolicyRule>
        <name>non-createable-role-disabled</name>
        <policyConstraints>
            <modification>
                <operation>add</operation>
            </modification>
        </policyConstraints>
        <policyActions>
            <enforcement/>
        </policyActions>
        <focusSelector>
            <type>RoleType</type>
            <filter>
                <q:equal>
                    <q:path>description</q:path>
                    <q:value>Thou shalt not create this role! (disabled)</q:value>
                </q:equal>
            </filter>
        </focusSelector>
        <condition>
            <expression>
                <script>
                    <code>false</code>
                </script>
            </expression>
        </condition>
    </globalPolicyRule>
    <globalPolicyRule>
        <name>immutable-role</name>
        <policyConstraints>
            <modification>
                <operation>modify</operation>
            </modification>
        </policyConstraints>
        <policyActions>
            <enforcement/>
        </policyActions>
        <focusSelector>
            <type>RoleType</type>
            <filter>
                <q:equal>
                    <q:path>description</q:path>
                    <q:value>Thou shalt not modify this role!</q:value>
                </q:equal>
            </filter>
        </focusSelector>
    </globalPolicyRule>
    <globalPolicyRule>
        <name>undeletable-role</name>
        <policyConstraints>
            <modification>
                <operation>delete</operation>
            </modification>
        </policyConstraints>
        <policyActions>
            <enforcement/>
        </policyActions>
        <focusSelector>
            <type>RoleType</type>
            <filter>
                <q:equal>
                    <q:path>description</q:path>
                    <q:value>Thou shalt not delete this role!</q:value>
                </q:equal>
            </filter>
        </focusSelector>
    </globalPolicyRule>
    <globalPolicyRule>  <!-- see TestRbac.test880 -->
        <name>immutable-user-from-pluto-selector</name>
        <policyConstraints>
            <modification>
                <operation>modify</operation>
            </modification>
        </policyConstraints>
        <policyActions>
            <enforcement/>
        </policyActions>
        <focusSelector>
            <type>UserType</type>
            <filter>
                <q:equal>
                    <q:path>description</q:path>
                    <q:value>Came from Pluto</q:value>
                </q:equal>
            </filter>
        </focusSelector>
    </globalPolicyRule>
    <globalPolicyRule>    <!-- see TestRbac.test880 -->
        <name>immutable-user-from-pluto-condition</name>
        <policyConstraints>
            <modification>
                <operation>modify</operation>
            </modification>
        </policyConstraints>
        <policyActions>
            <enforcement/>
        </policyActions>
        <focusSelector>
            <type>UserType</type>
        </focusSelector>
        <condition>
            <source>
                <path>description</path>
            </source>
            <expression>
                <script>
                    <code>
                        description == 'Came from Pluto'
                    </code>
                </script>
            </expression>
        </condition>
    </globalPolicyRule>
    <globalPolicyRule>
        <name>immutable-role-description</name>
        <policyConstraints>
            <modification>
                <operation>modify</operation>
                <item>description</item>
            </modification>
        </policyConstraints>
        <policyActions>
            <enforcement/>
        </policyActions>
        <focusSelector>
            <type>RoleType</type>
            <filter>
                <q:equal>
                    <q:path>description</q:path>
                    <q:value>Thou shalt not modify description of this role!</q:value>
                </q:equal>
            </filter>
        </focusSelector>
    </globalPolicyRule>

