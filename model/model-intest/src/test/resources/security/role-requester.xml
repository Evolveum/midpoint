<role xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
        oid="40000000-1000-0000-0000-000000000000">
    <name>role-requester</name>
    <authorization>
        <name>self-read</name>
        <action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#get</action>
        <object>
            <type>UserType</type>
            <special>self</special>
        </object>
    </authorization>
    <authorization>
        <name>self-modify</name>
        <action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#modify</action>
        <phase>execution</phase>
        <object>
            <type>UserType</type>
            <special>self</special>
        </object>
        <item>credentials</item>
        <item>assignment</item>
    </authorization>
    <authorization>
        <name>users-read</name>
        <action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#read</action>
        <object>
            <type>UserType</type>
        </object>
    </authorization>
    <authorization>
        <name>orgs-search</name>
        <action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#read</action>
        <object>
            <type>OrgType</type>
        </object>
        <item>name</item>
        <item>description</item>
        <item>displayName</item>
    </authorization>
    <authorization>
        <name>service-read</name>
        <action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#read</action>
        <object>
            <type>ServiceType</type>
        </object>
        <item>name</item>
        <item>description</item>
        <item>displayName</item>
        <item>requestable</item>
        <item>riskLevel</item>
    </authorization>
    <authorization>
        <name>assign-requestable-services</name>
        <action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#assign</action>
        <phase>request</phase>
        <object>
            <type>UserType</type>
        </object>
        <target>
            <type>ServiceType</type>
            <filter>
                <q:and>
                    <q:equal>
                        <q:path>requestable</q:path>
                        <q:value>true</q:value>
                    </q:equal>
                    <q:equal>
                        <q:path>riskLevel</q:path>
                        <q:value>low</q:value>
                    </q:equal>
                </q:and>
            </filter>
        </target>
    </authorization>
    <authorization>
        <name>roles-read</name>
        <action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#read</action>
        <object>
            <type>RoleType</type>
        </object>
        <item>name</item>
        <item>description</item>
        <item>displayName</item>
        <!--
        <item>requestable</item>
        <item>riskLevel</item>
        -->
    </authorization>
    <authorization>
        <name>assign-requestable-roles</name>
        <action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#assign</action>
        <phase>request</phase>
        <object>
            <type>UserType</type>
        </object>
        <target>
            <type>RoleType</type>
            <filter>
                <q:and>
                    <q:equal>
                        <q:path>requestable</q:path>
                        <q:value>true</q:value>
                    </q:equal>
                    <q:equal>
                        <q:path>riskLevel</q:path>
                        <q:value>high</q:value>
                    </q:equal>
                </q:and>
            </filter>
        </target>
    </authorization>
</role>
