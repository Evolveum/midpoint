<role xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
        oid="40000000-1000-0000-0000-000000000000">
    <name>role-requester</name>
    <description>This role allows to search for the roles with allowed items name, description, displayName.
        #assign authorization is trying to search by requestable and riskLevel items.
        Service type objects have also requestable among the allowed items for search.
    </description>
    <authorization>
        <name>self-read</name>
        <action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#get</action>
        <object>
            <type>UserType</type>
            <special>self</special>
        </object>
    </authorization>
    <authorization>
        <name>service-read</name>
        <action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#read</action>
        <object>
            <type>ServiceType</type>
        </object>
        <item>name</item>
        <item>description</item>
        <item>displayName</item>
        <item>requestable</item>
        <item>riskLevel</item>
    </authorization>

    <authorization>
        <name>roles-read</name>
        <action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#read</action>
        <object>
            <type>RoleType</type>
        </object>
        <item>name</item>
        <item>description</item>
        <item>displayName</item>
        <!--
        <item>requestable</item>
        <item>riskLevel</item>
        -->
    </authorization>
    <authorization>
        <name>assign-requestable-roles</name>
        <action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#assign</action>
        <phase>request</phase>
        <object>
            <type>UserType</type>
        </object>
        <target>
            <type>RoleType</type>
            <filter>
                <q:and>
                    <q:equal>
                        <q:path>requestable</q:path>
                        <q:value>true</q:value>
                    </q:equal>
                    <q:equal>
                        <q:path>riskLevel</q:path>
                        <q:value>high</q:value>
                    </q:equal>
                </q:and>
            </filter>
            <!--            <orgRelation>-->
            <!--                <subjectRelation>org:manager</subjectRelation>-->
            <!--            </orgRelation>-->
        </target>
    </authorization>
</role>
