<objectTemplate oid="b3a8f244-565a-11e7-8802-7b2586c1ce99"
   xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns='http://midpoint.evolveum.com/xml/ns/public/common/common-3'
   xmlns:c='http://midpoint.evolveum.com/xml/ns/public/common/common-3'
   xmlns:t='http://prism.evolveum.com/xml/ns/public/types-3'
   xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
   xmlns:piracy='http://midpoint.evolveum.com/xml/ns/samples/piracy'>
    <name>Security User Template</name>

    <!-- MID-4830 -->
    <item>
         <ref>nickName</ref>
         <mapping>
            <strength>strong</strength>
            <source>
               <path>credentials/password/metadata</path>
            </source>
            <expression>
                <runAsRef oid="00000000-0000-0000-0000-000000000002"/>
               <script>
                  <code>'modifier:'+metadata?.creatorRef?.oid</code>
               </script>
            </expression>
         </mapping>
      </item>

    <mapping>
        <name>usertemplate-fullName</name>
        <strength>strong</strength>
        <source>
            <path>givenName</path>
        </source>
        <source>
            <path>familyName</path>
        </source>
        <expression>
            <script>
                <code>
                    givenName + ' ' + familyName
                </code>
             </script>
        </expression>
        <target>
            <path>fullName</path>
        </target>
        <condition>
             <script>
                <code>givenName != null &amp;&amp; familyName != null</code>
            </script>
        </condition>
    </mapping>

    <mapping>
        <name>Org mapping</name>
        <strength>strong</strength>
        <authoritative>true</authoritative>
        <source>
            <path>organizationalUnit</path>
        </source>
        <expression>
            <assignmentTargetSearch>
                <targetType>OrgType</targetType>
                <filter>
                    <q:equal>
                        <q:path>name</q:path>
                        <expression>
                            <path>$organizationalUnit</path>
                        </expression>
                    </q:equal>
                </filter>
            </assignmentTargetSearch>
        </expression>
        <target>
            <path>assignment</path>
        </target>
    </mapping>

    <!-- MID-8347 -->
    <item>
        <ref>operationExecution/message</ref>
        <limitations>
            <layer>presentation</layer>
            <access>
                <read>true</read>
                <add>false</add>
                <modify>false</modify>
            </access>
        </limitations>
    </item>

</objectTemplate>
