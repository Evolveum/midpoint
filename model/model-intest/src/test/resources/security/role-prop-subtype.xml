<role oid="0a841bcc-c255-11e8-bd03-d72f34cdd7f8"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-4"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-4"
        xmlns:t="http://prism.evolveum.com/xml/ns/public/types-4"
        xmlns:q="http://prism.evolveum.com/xml/ns/public/query-4">
    <name>Prop Subtype</name>    
    <authorization>
    	<name>read all subtype</name>
    	<action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#read</action>
    	<object>
    		<type>UserType</type>
    	</object>
    </authorization>
    <authorization>
    	<name>write subtype req</name>
    	<action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#add</action>
    	<action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#modify</action>
    	<action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#delete</action>
    	<phase>request</phase>
    	<object>
    		<type>UserType</type>
    		<filter>
	            <q:equal>
	               <q:path>subtype</q:path>
	               <q:value>captain</q:value>
	            </q:equal>
	        </filter>
    	</object>
    	<!-- Note: subtype property is not excluded here. User could modify it ... -->
    </authorization>
    <authorization>
    	<name>write subtype exec</name>
    	<description>
    		Allow unlimited write for execution.
    		This avoid false positive/negative with object template setting nickName value.
    		It also complicates the setup a bit, so the test is not entirelly trivial.
    	</description>
    	<action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#add</action>
    	<action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#modify</action>
    	<action>http://midpoint.evolveum.com/xml/ns/public/security/authorization-model-3#delete</action>
    	<phase>execution</phase>
    </authorization>
</role>
