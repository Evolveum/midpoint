<role xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
      oid="00000001-d34d-b33f-f00d-00000000050a">
    <name>Role50a-slow</name>
    <inducement>
        <focusMappings>
            <mapping>
                <source>
                    <path>description</path>
                </source>
                <expression>
                    <script>
                        <code>import com.evolveum.midpoint.wf.impl.other.TestParallelApprovals

                        if (TestParallelApprovals.doSleep) {
                            System.out.println('Sleeping for 1 second (50a)...')
                            Thread.sleep(1000)
                            System.out.println('Sleeping done (50a)...')
                        }
                        return description
                        </code>
                    </script>
                </expression>
                <target>
                    <path>description</path>
                </target>
            </mapping>
        </focusMappings>
    </inducement>
    <!-- no approver (i.e. going to task 0) -->
</role>
