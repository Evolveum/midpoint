<role xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
	  oid="009516c6-98a3-469d-80b0-fbc059fad4bb">
	<name>metarole-escalated</name>
	<inducement>
		<policyRule>
			<policyConstraints>
				<assignment/>
			</policyConstraints>
			<policyActions>
				<approval>
					<compositionStrategy>
						<order>1</order>
					</compositionStrategy>
					<approvalSchema>
						<level>
							<approverRef oid="00000001-d34d-b33f-f00d-L00000000001" type="UserType"/>		<!-- lead1 -->
							<duration>P14D</duration>
							<timedActions>
								<name>First, send a notification</name>
								<time>
									<value>P5D</value>
								</time>
								<actions>
									<notify/>
								</actions>
							</timedActions>
							<timedActions>
								<name>2 days before deadline, escalate</name>
								<time>
									<value>-P2D</value>
									<base>deadline</base>		<!-- the default, in this case -->
								</time>
								<actions>
									<escalate>
										<approverRef oid="00000001-d34d-b33f-f00d-L00000000002" type="UserType" />  <!-- lead2 -->
										<delegationMethod>addAssignees</delegationMethod>
										<escalationLevelName>escalation-to-lead2</escalationLevelName>
										<escalationLevelDisplayName>Escalated to lead2</escalationLevelDisplayName>
									</escalate>
								</actions>
								<escalationLevelFrom>0</escalationLevelFrom>		<!-- applies only to zero escalation level -->
								<escalationLevelTo>0</escalationLevelTo>			<!-- applies only to zero escalation level -->
							</timedActions>
							<timedActions>
								<name>Finally - approve</name>
								<actions>
									<complete>
										<outcome>approve</outcome>
									</complete>
								</actions>
							</timedActions>
						</level>
					</approvalSchema>
				</approval>
			</policyActions>
		</policyRule>
	</inducement>
</role>