<systemConfiguration oid="00000000-0000-0000-0000-000000000001" version="0"
					 xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
					 xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
					 xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3">
    <name>SystemConfiguration</name>
    <logging>
    	<rootLoggerAppender>File Appender</rootLoggerAppender>
    	<rootLoggerLevel>INFO</rootLoggerLevel>
        <classLogger>
	        <level>TRACE</level>
	        <package>com.evolveum.midpoint.common.LoggingConfigurationManager</package>
      	</classLogger>
        <appender xsi:type="c:FileAppenderConfigurationType" name="File Appender" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
            <pattern>%date [%thread] %-5level \(%logger{46}\): %message%n</pattern>
            <fileName>target/test.log</fileName>
            <append>true</append>
        </appender>
    </logging>
    <globalSecurityPolicyRef oid="28bf845a-b107-11e3-85bc-001e8c717e5b"/>
	<globalPolicyRule>
		<name>global-assignment-notification-for-judge</name>
		<policyConstraints>
			<ref>
				<name>assignment-added</name>
			</ref>
		</policyConstraints>
		<policyActions>
			<notification/>
		</policyActions>
		<focusSelector>
			<type>UserType</type>
		</focusSelector>
		<targetSelector>
			<type>RoleType</type>
			<filter>
				<q:equal>
					<q:path>name</q:path>
					<q:value>Judge</q:value>
				</q:equal>
			</filter>
		</targetSelector>
	</globalPolicyRule>
	<globalPolicyRule>
		<name>global-assignment-disabled</name>
		<policyConstraints>
			<assignment>
				<name>assignment-added</name>
				<operation>add</operation>
			</assignment>
		</policyConstraints>
		<policyActions>
			<enforcement/>
		</policyActions>
		<focusSelector>
			<type>UserType</type>
		</focusSelector>
		<targetSelector>
			<type>RoleType</type>
		</targetSelector>
		<condition>
			<expression>
				<value>false</value>
			</expression>
		</condition>
	</globalPolicyRule>
	<globalPolicyRule>
		<name>global-focus-modification</name>
		<policyConstraints>
			<modification>
				<item>employeeType</item>
			</modification>
		</policyConstraints>
		<policyActions>
			<notification/>
		</policyActions>
		<focusSelector>
			<type>UserType</type>
		</focusSelector>
		<condition>
			<source>
				<path>employeeType</path>
			</source>
			<expression>
				<script>
					<code>
						employeeType != "T"
					</code>
				</script>
			</expression>
		</condition>
	</globalPolicyRule>
	<globalPolicyRule>
		<name>Immutable inducements</name>
		<policyConstraints>
			<modification>
				<item>inducement</item>
			</modification>
		</policyConstraints>
		<policyActions>
			<enforcement/>
		</policyActions>
		<focusSelector>
			<type>RoleType</type>
			<subtype>immutable-inducements</subtype>
		</focusSelector>
	</globalPolicyRule>
	<globalPolicyRule>
		<name>No addition/deletion of inducements</name>
		<policyConstraints>
			<modification>
				<operation>modify</operation>
				<item>inducement</item>
				<exactPathMatch>true</exactPathMatch>
			</modification>
		</policyConstraints>
		<policyActions>
			<enforcement/>
		</policyActions>
		<focusSelector>
			<type>RoleType</type>
			<subtype>no-inducements-add-delete</subtype>
		</focusSelector>
	</globalPolicyRule>
	<globalPolicyRule>
		<name>No addition/deletion of inducements (via expression)</name>
		<policyConstraints>
			<modification>
				<item>inducement</item>
				<expression>
					<script>
						<code>
							import com.evolveum.midpoint.prism.delta.*
							import com.evolveum.midpoint.prism.path.*

							def delta = ruleEvaluationContext.focusContext?.primaryDelta
							def inducementPath = new ItemPath("inducement")
							if (delta.isModify()) {
								for (ItemDelta itemDelta : delta.modifications) {
									if (inducementPath.equivalent(itemDelta.path)) {
										// itemDelta is either add, delete or replace (for inducement as a whole)
										return true
									}
								}
							}
							false
						</code>
					</script>
				</expression>
			</modification>
		</policyConstraints>
		<policyActions>
			<enforcement/>
		</policyActions>
		<focusSelector>
			<type>RoleType</type>
			<subtype>no-inducements-add-delete-via-expression</subtype>
		</focusSelector>
	</globalPolicyRule>
    <adminGuiConfiguration>
	    <userDashboardLink>
	    	<targetUrl>/foo</targetUrl>
	    	<label>Foo</label>
	    </userDashboardLink>
	    <objectForms>
    		<objectForm>
    			<type>RoleType</type>
    			<formSpecification>
    				<panelClass>com.piracy.form.PirateRolePanel</panelClass>
    			</formSpecification>
    		</objectForm>
    	</objectForms>
    	<defaultTimezone>Jamaica</defaultTimezone>
    </adminGuiConfiguration>
</systemConfiguration>
