<filter xmlns="http://prism.evolveum.com/xml/ns/public/query-3" xmlns:c='http://midpoint.evolveum.com/xml/ns/public/common/common-3'>
    <ref>
        <path>linkRef</path>
        <c:expression>
            <c:script>
                <c:code>
                    if (input == null) {
                        return null
                    } else {
                        def ort = new com.evolveum.midpoint.xml.ns._public.common.common_3.ObjectReferenceType();
                        ort.setOid(input)
                        return ort
                    }
                </c:code>
            </c:script>
        </c:expression>
    </ref>
</filter>
