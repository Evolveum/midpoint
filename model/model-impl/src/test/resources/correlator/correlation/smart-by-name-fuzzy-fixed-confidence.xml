<itemsCorrelator
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3">
    <name>by-name-fuzzy-fixed</name>
    <item>
        <ref>givenName</ref>
        <search>
            <fuzzy>
                <levenshtein>
                    <threshold>1</threshold>
                </levenshtein>
            </fuzzy>
            <confidence>
                <expression>
                    <script>
                        <code>1</code> <!-- overriding the default computation -->
                    </script>
                </expression>
            </confidence>
        </search>
    </item>
    <item>
        <ref>familyName</ref>
        <search>
            <fuzzy>
                <similarity>
                    <threshold>0.5</threshold>
                </similarity>
            </fuzzy>
            <confidence>
                <expression>
                    <script>
                        <code>1</code> <!-- overriding the default computation -->
                    </script>
                </expression>
            </confidence>
        </search>
    </item>
</itemsCorrelator>
