<systemConfiguration xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-4"
					 xmlns:test="http://test"
					 xmlns:org="http://midpoint.evolveum.com/xml/ns/public/common/org-4">
	<roleManagement>
		<relations>
			<relation>
				<ref>test:kinderManager</ref>
				<display>
					<label>Kinder Manager</label>
				</display>
				<category>administration</category>
				<category>organization</category>
				<defaultFor>manager</defaultFor>
				<automaticallyMatched>true</automaticallyMatched>
			</relation>
			<relation>
				<ref>test:extra</ref>
				<kind>member</kind>			<!-- selected automatically as the default -->
			</relation>
			<relation>
				<ref>test:approver</ref>
				<defaultFor>approver</defaultFor>
			</relation>
			<relation>
				<ref>org:meta</ref>
				<defaultFor>meta</defaultFor>
			</relation>
			<includeDefaultRelations>false</includeDefaultRelations>
		</relations>
	</roleManagement>
</systemConfiguration>