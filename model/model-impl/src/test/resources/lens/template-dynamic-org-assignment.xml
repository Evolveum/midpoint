<objectTemplate
    xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
    xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
    oid="ee079df8-1146-4e53-872f-b9733f24ebfe">
    <name>Special user template for dynamic role assignment</name>
    <mapping>
        <name>assignment mapping</name>
        <source>
            <path>description</path>
        </source>
        <expression>
            <assignmentTargetSearch>
                <targetType>OrgType</targetType>
                <filter>
                       <q:equal>
                          <q:path>name</q:path>
                          <q:value>PB001</q:value>
                       </q:equal>
                </filter>
                <populate>
                    <populateItem>
                        <expression>
                            <script>
                                <code>
                                    description
                                </code>
                            </script>
                        </expression>
                        <target>
                            <path>activation/validTo</path>
                        </target>
                    </populateItem>
                </populate>
            </assignmentTargetSearch>
        </expression>
        <target>
            <path>assignment</path>
            <set>
                <condition>
                    <script>
                        <code>
                            input?.targetRef?.type?.localPart == 'OrgType'
                        </code>
                    </script>
                </condition>
            </set>
        </target>
    </mapping>
</objectTemplate>
