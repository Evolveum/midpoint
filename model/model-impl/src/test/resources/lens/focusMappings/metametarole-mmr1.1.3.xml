<role xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
      oid="99ed5447-4633-40ca-a81d-faa6f364ee69">
    <name>mmr1.1.3</name>
    <inducement>
        <focusMappings>
            <mapping>
                <source>
                    <path>extension/p113c</path>
                </source>
                <target>
                    <path>organizationalUnit</path>
                </target>
            </mapping>
            <mapping>
                <source>
                    <path>extension/p113b</path>
                </source>
                <target>
                    <path>extension/p113c</path>
                </target>
            </mapping>
            <mapping>
                <source>
                    <path>extension/p113a</path>
                </source>
                <target>
                    <path>extension/p113b</path>
                </target>
            </mapping>
            <mapping>
                <source>
                    <path>description</path>
                </source>
                <expression>
                    <script>
                        <code>
                            // source = this metarole
                            description + ':' + basic.stringify(source.name)
                        </code>
                    </script>
                </expression>
                <target>
                    <path>extension/p113a</path>
                </target>
            </mapping>
        </focusMappings>
        <order>3</order>
        <focusType>UserType</focusType>
        <condition>
            <source>
                <path>$focus/title</path>
            </source>
            <expression>
                <script>
                    <code>basic.stringify(title) == 'enabled'</code>
                </script>
            </expression>
        </condition>
    </inducement>
</role>
