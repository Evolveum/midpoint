<!-- Uses description to put user to correct organization. -->
<role xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
      oid="7d31a3c2-cecf-4e3d-8740-988b37848a7c">
    <name>organizer</name>
    <inducement>
        <focusMappings>
            <mapping>
                <source>
                    <path>organization</path>
                </source>
                <target>
                    <path>organizationalUnit</path>
                </target>
            </mapping>
            <mapping>
                <source>
                    <path>description</path>
                </source>
                <target>
                    <path>organization</path>
                </target>
            </mapping>
        </focusMappings>
    </inducement>
</role>
