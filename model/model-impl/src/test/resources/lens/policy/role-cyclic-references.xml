<role oid="3639057f-d8af-4474-a017-ac5a5378cd9d"
      xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3">
    <name>Cyclic references</name>
    <assignment>
        <policyRule>
            <name>rule-A</name>
            <policyConstraints>
                <name>constraint-A</name>
                <ref>
                    <name>constraint-B</name>
                </ref>
            </policyConstraints>
            <policyActions>
                <!-- none -->
            </policyActions>
        </policyRule>
    </assignment>
    <assignment>
        <policyRule>
            <name>rule-B</name>
            <policyConstraints>
                <name>constraint-B</name>
                <and>
                    <name>and-constraint</name>
                    <modification>
                        <name>modification-constraint</name>
                    </modification>
                    <transition>
                        <name>transition-constraint</name>
                        <stateBefore>false</stateBefore>
                        <stateAfter>true</stateAfter>
                        <constraints>
                            <ref>
                                <name>constraint-A</name>
                            </ref>
                        </constraints>
                    </transition>
                </and>
            </policyConstraints>
            <policyActions>
                <!-- none -->
            </policyActions>
        </policyRule>
    </assignment>
</role>
