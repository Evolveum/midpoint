<role oid="bce9b2d2-f4a2-436d-97e9-880b8e284cf7"
      xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3">
    <name>Chained references</name>
    <assignment>
        <policyRule>
            <name>rule1</name>
            <policyConstraints>
                <ref>
                    <name>mod-description-and-riskLevel-and-inducement</name>
                </ref>
            </policyConstraints>
            <policyActions>
                <!-- none -->
            </policyActions>
        </policyRule>
    </assignment>
    <assignment>
        <policyRule>
            <name>rule2</name>
            <policyConstraints>
                <name>mod-description-and-riskLevel-and-inducement</name>
                <modification>
                    <item>description</item>
                </modification>
                <ref>
                    <name>mod-riskLevel-and-inducement</name>
                </ref>
            </policyConstraints>
            <policyActions>
                <!-- none -->
            </policyActions>
        </policyRule>
    </assignment>
    <assignment>
        <policyRule>
            <name>rule3</name>
            <policyConstraints>
                <name>mod-riskLevel-and-inducement</name>
                <modification>
                    <item>riskLevel</item>
                </modification>
                <ref>
                    <name>mod-inducement</name>
                </ref>
            </policyConstraints>
            <policyActions>
                <!-- none -->
            </policyActions>
        </policyRule>
    </assignment>
    <assignment>
        <policyRule>
            <name>rule4</name>
            <policyConstraints>
                <modification>
                    <name>mod-inducement</name>
                    <item>inducement</item>
                </modification>
            </policyConstraints>
            <policyActions>
                <!-- none -->
            </policyActions>
        </policyRule>
    </assignment>
    <assignment>
        <policyRule>
            <name>rule5</name>
            <policyConstraints>
                <modification>        <!-- same name, same content; conflict should not be reported -->
                    <name>mod-inducement</name>
                    <item>inducement</item>
                </modification>
            </policyConstraints>
            <policyActions>
                <!-- none -->
            </policyActions>
        </policyRule>
    </assignment>
</role>
