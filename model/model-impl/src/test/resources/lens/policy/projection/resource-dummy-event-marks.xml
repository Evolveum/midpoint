<resource oid="b951c40b-2f57-4f1d-a881-8ba37e973c11"
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:q="http://prism.evolveum.com/xml/ns/public/query-3"
        xmlns:icfs="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/resource-schema-3"
        xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">

    <name>dummy</name>
    <connectorRef type="ConnectorType">
        <filter>
            <q:and>
                <q:equal>
                    <q:path>connectorType</q:path>
                    <q:value>com.evolveum.icf.dummy.connector.DummyConnector</q:value>
                </q:equal>
                <q:equal>
                    <q:path>connectorVersion</q:path>
                    <q:value>2.0</q:value>
                </q:equal>
            </q:and>
        </filter>
    </connectorRef>
    <connectorConfiguration xmlns:icfi="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/bundle/com.evolveum.icf.dummy/com.evolveum.icf.dummy.connector.DummyConnector"
            xmlns:icfc="http://midpoint.evolveum.com/xml/ns/public/connector/icf-1/connector-schema-3">
        <icfc:configurationProperties>
            <icfi:instanceId>event-marks</icfi:instanceId>
        </icfc:configurationProperties>
    </connectorConfiguration>

    <schemaHandling>
        <objectType>
            <kind>account</kind>
            <intent>default</intent>
            <default>true</default>
            <objectClass>ri:AccountObjectClass</objectClass>
            <attribute>
                <ref>icfs:name</ref>
                <correlator/>
                <outbound>
                    <strength>strong</strength>
                    <source>
                        <path>name</path>
                    </source>
                </outbound>
                <inbound>
                    <strength>weak</strength>
                    <target>
                        <path>name</path>
                    </target>
                </inbound>
            </attribute>
            <attribute>
                <ref>ri:samAccountName</ref>
                <secondaryIdentifier>true</secondaryIdentifier>
                <outbound>
                    <strength>strong</strength>
                    <source>
                        <path>employeeNumber</path>
                    </source>
                </outbound>
            </attribute>
            <association>
                <ref>ri:group</ref>
                <kind>entitlement</kind>
                <intent>group</intent>
                <direction>objectToSubject</direction>
                <associationAttribute>ri:members</associationAttribute>
                <valueAttribute>icfs:name</valueAttribute>
            </association>
            <association>
                <ref>ri:org</ref>
                <kind>generic</kind>
                <intent>org</intent>
                <direction>subjectToObject</direction>
                <associationAttribute>ri:memberOfOrg</associationAttribute>
                <valueAttribute>icfs:name</valueAttribute>
            </association>
            <activation>
                <administrativeStatus>
                    <outbound/>
                </administrativeStatus>
            </activation>
            <credentials>
                <password>
                    <outbound/>
                </password>
            </credentials>
            <synchronization>
                <reaction>
                    <documentation>Delete unmatched accounts whose names contain 'sensitive'</documentation>
                    <situation>unmatched</situation>
                    <condition>
                        <script>
                            <code>
                                import static com.evolveum.midpoint.schema.constants.SchemaConstants.ICFS_NAME

                                (basic.getAttributeValue(projection, ICFS_NAME) as String).contains('sensitive')
                            </code>
                        </script>
                    </condition>
                    <actions>
                        <deleteResourceObject/> <!-- MID-8608 -->
                    </actions>
                </reaction>
            </synchronization>
        </objectType>
        <objectType>
            <kind>entitlement</kind>
            <intent>group</intent>
            <default>true</default>
            <objectClass>ri:GroupObjectClass</objectClass>
            <attribute>
                <ref>ri:members</ref>
                <fetchStrategy>minimal</fetchStrategy>
            </attribute>
        </objectType>
        <objectType>
            <kind>generic</kind>
            <intent>org</intent>
            <default>true</default>
            <objectClass>ri:CustomorgObjectClass</objectClass>
        </objectType>
    </schemaHandling>
</resource>
